  /* ===== Hover open dropdown ===== */
.hover-dropdown:hover .animated-dropdown {
  opacity: 1;
  visibility: visible;
  transform: translateY(0) scale(1);
}

/* ===== Dropdown base ===== */
.animated-dropdown {
  display: block;
  opacity: 0;
  visibility: hidden;
  transform: translateY(20px) scale(0.95);
  transition: all 0.4s cubic-bezier(.4,0,.2,1);
  border-radius: 10px;
  padding: 10px 0;
}

/* ===== Item stagger animation ===== */
.dropdown-anim {
  opacity: 0;
  transform: translateX(-15px);
  animation: slideFade 0.45s ease forwards;
}

.dropdown-anim:nth-child(1) { animation-delay: 0.1s; }
.dropdown-anim:nth-child(2) { animation-delay: 0.2s; }
.dropdown-anim:nth-child(3) { animation-delay: 0.3s; }
.dropdown-anim:nth-child(5) { animation-delay: 0.4s; }

@keyframes slideFade {
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ===== Dropdown item hover ===== */
.dropdown-item {
  padding: 12px 20px;
  font-size: 14px;
  transition: all 0.3s ease;
}

.dropdown-item:hover {
  background: linear-gradient(90deg, #2874f0, #4f9cff);
  color: #fff;
  transform: translateX(8px);
  box-shadow: inset 4px 0 0 #ffeb3b;
}

/* ===== Tooltip ===== */
.tooltip-parent {
  position: relative;
}

.login-tooltip {
  position: absolute;
  top: 42px;
  left: 50%;
  transform: translateX(-50%) translateY(10px);
  background: #000;
  color: #fff;
  padding: 6px 14px;
  font-size: 12px;
  border-radius: 20px;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.login-tooltip::after {
  content: "";
  position: absolute;
  top: -6px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 6px;
  border-style: solid;
  border-color: transparent transparent #000 transparent;
}

.tooltip-parent:hover .login-tooltip {
  opacity: 1;
  visibility: visible;
  transform: translateX(-50%) translateY(0);
}

</style>
