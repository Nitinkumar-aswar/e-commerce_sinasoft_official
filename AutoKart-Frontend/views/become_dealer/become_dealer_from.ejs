<form action="/dealer/register" method="POST" autocomplete="off">

  <!-- Hidden dummy fields to block autofill -->
  <input type="text" name="fakeusername" style="display:none">
  <input type="password" name="fakepassword" style="display:none">

  <!-- Real Fields -->
  <div class="input-group">
    <label>Full Name *</label>
    <input type="text" name="full_name" required autocomplete="new-name">
  </div>

  <div class="input-group">
    <label>Mobile Number *</label>
    <input type="text" name="mobile" required maxlength="10" inputmode="numeric"
           pattern="[0-9]{10}" autocomplete="new-password"
           oninput="this.value=this.value.replace(/[^0-9]/g,'')">
  </div>

  <div class="input-group">
    <label>Email ID *</label>
    <input type="email" name="email" required autocomplete="new-email">
  </div>
<div class="input-group">
  <label>City *</label>
  <input type="text" name="city" required autocomplete="off" 
         oninput="this.value=this.value.replace(/[^a-zA-Z\s]/g,'')"
         placeholder="Enter City">
</div>
  <div class="input-group">
    <label>Dealer Type *</label>
    <select name="dealer_type" required>
      <option value="">Select Dealer Type</option>
      <option>Truck Dealer</option>
      <option>Auto Parts Dealer</option>
      <option>Service Center</option>
    </select>
  </div>

  <button class="btn">Register as Dealer →</button>
</form>

  </div>

  <!-- RIGHT -->
  <div class="right">

    <!-- CHECK STATUS (ABOVE BANNER) -->
    <div class="check-status">
      <h4>Check Your Request Status</h4>
      <form action="/admin/dealer/check_status" method="POST">
        <input type="number" name="mobile" placeholder="Enter Mobile Number" required autocomplete="off">
        <button type="submit">Check Status</button>
      </form>
    </div>

    <!-- WHY BECOME DEALER -->
    <div class="banner">
      <h3>Why Become a Dealer?</h3>
      <p>
        ✔ Pan India Reach<br>
        ✔ High Margins<br>
        ✔ Dedicated Support
      </p>
    </div>

  </div>

