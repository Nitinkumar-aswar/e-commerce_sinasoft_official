<script>
const sidebarItems = document.querySelectorAll(".sidebar-items li");
const content = document.querySelector(".content-account");

const sections = Array.from(sidebarItems).map(item =>
  document.getElementById(item.dataset.target)
);

/* ===== AUTO ACTIVE ON SCROLL (DIV BASED) ===== */
function onScrollActivate() {
  const scrollTop = content.scrollTop;

  sections.forEach((section, index) => {
    if (!section) return;

    const sectionTop = section.offsetTop - 120;
    const sectionBottom = sectionTop + section.offsetHeight;

    if (scrollTop >= sectionTop && scrollTop < sectionBottom) {
      sidebarItems.forEach(li => li.classList.remove("active"));
      sidebarItems[index].classList.add("active");
    }
  });
}

content.addEventListener("scroll", onScrollActivate);

/* ===== CLICK SCROLL + ACTIVE ===== */
sidebarItems.forEach(item => {
  item.addEventListener("click", () => {
    const target = document.getElementById(item.dataset.target);

    content.scrollTo({
      top: target.offsetTop - 20,
      behavior: "smooth"
    });

    sidebarItems.forEach(li => li.classList.remove("active"));
    item.classList.add("active");
  });
});
</script>



