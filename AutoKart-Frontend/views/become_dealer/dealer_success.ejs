.checkmark::after {
  content: "";
  position: absolute;
  width: 25px;
  height: 50px;
  border: solid #fff;
  border-width: 0 6px 6px 0;
  transform: rotate(45deg);
  left: 32px;
  top: 18px;
}

h1 {
  color: #2c3e50;
  margin-bottom: 10px;
}

p {
  color: #555;
  font-size: 16px;
}

.welcome {
  margin-top: 10px;
  font-size: 18px;
  color: #1d976c;
  font-weight: bold;
  animation: glow 1.5s infinite alternate;
}

@keyframes popUp {
  from { transform: scale(0.6); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

@keyframes scaleIn {
  from { transform: scale(0); }
  to { transform: scale(1); }
}

@keyframes glow {
  from { opacity: 0.6; }
  to { opacity: 1; }
}
</style>
</head>

