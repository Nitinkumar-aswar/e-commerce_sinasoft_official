<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Flipkart Seller Login</title>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<!-- Google Font -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family:'Inter',sans-serif;
}

body{
  height:100vh;
  background:url('https://images.unsplash.com/photo-1601597111158-2fceff292cdc') center/cover no-repeat;
}

/* OVERLAY */
.overlay{
  position:fixed;
  inset:0;
  background:rgba(0,0,0,.35);
  display:flex;
  align-items:center;
  justify-content:center;
}

/* MODAL */
.modal{
  width:360px;
  background:#fff;
  border-radius:10px;
  padding:22px;
  position:relative;
  box-shadow:0 10px 30px rgba(0,0,0,.25);
}

.modal h3{
  font-size:18px;
  font-weight:600;
  margin-bottom:18px;
}

/* CLOSE */
.close{
  position:absolute;
  right:14px;
  top:14px;
  font-size:18px;
  cursor:pointer;
  color:#6b7280;
}

/* INPUT */
.input{
  margin-bottom:16px;
}
.input input{
  width:100%;
  padding:14px;
  border-radius:6px;
  border:1px solid #d1d5db;
  font-size:14px;
}
.input input:focus{
  outline:none;
  border-color:#2563eb;
}

/* BUTTONS */
.btn{
  width:100%;
  padding:14px;
  border-radius:6px;
  border:none;
  font-size:14px;
  cursor:pointer;
  font-weight:600;
}

.btn-next{
  background:#2563eb;
  color:#fff;
  margin-bottom:14px;
}

.btn-register{
  background:#fff;
  border:1px solid #2563eb;
  color:#2563eb;
}

.text{
  text-align:center;
  font-size:13px;
  color:#6b7280;
  margin:14px 0;
}

/* FOOTER */
.footer{
  font-size:11px;
  color:#6b7280;
  margin-top:14px;
  line-height:1.4;
}
.footer a{
  color:#2563eb;
  text-decoration:none;
}
</style>
</head>

<body>

<div class="overlay">
  <div class="modal">
    <span class="close" onclick="closeModal()">✕</span>

    <h3>Login</h3>

    <!-- FORM -->
    <form id="loginForm">
      <div class="input" id="usernameInput">
        <input type="text" name="username" placeholder="Username, phone number or email" required>
      </div>

      <div class="input" id="passwordInput" style="display:none;">
        <input type="password" name="password" placeholder="Enter password" required>
      </div>

      <button class="btn btn-next" type="submit">Next</button>
    </form>

    <div class="text" id="registerText">Don’t have an account?</div>

    <button class="btn btn-register">
      <a href="/dealer_start_selling">Register for new account</a>
    </button>

    <div class="footer">
      By continuing, you agree to Flipkart’s
      <a href="#">Terms of Use</a> & <a href="#">Privacy Policy</a><br>
      Site protected by reCAPTCHA & Google
      <a href="#">Privacy Policy</a> · <a href="#">Terms</a> apply
    </div>
  </div>
</div>

<script>
function closeModal(){
  document.querySelector(".overlay").style.display = "none";
}

const loginForm = document.getElementById("loginForm");
const usernameInput = document.getElementById("usernameInput");
const passwordInput = document.getElementById("passwordInput");
const btn = loginForm.querySelector(".btn-next");

loginForm.addEventListener("submit", function(e){
  e.preventDefault();
  
  if(usernameInput.style.display !== "none"){
    const username = loginForm.username.value.trim();
    if(username === ""){
      alert("Please enter your username or phone/email");
      return;
    }
    // Show password input
    usernameInput.style.display = "none";
    passwordInput.style.display = "block";
    btn.textContent = "Login";
  } else {
    const password = loginForm.password.value.trim();
    if(password === ""){
      alert("Please enter your password");
      return;
    }
    // Form can be submitted or redirected
    alert("Login Successful!\nUsername: " + loginForm.username.value);
    // window.location.href = "/dashboard"; // redirect to dashboard page
  }
});
</script>

</body>
</html>
