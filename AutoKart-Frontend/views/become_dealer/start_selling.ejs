<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family:'Inter',sans-serif;
}

body{
  background:#f1f7fd;
  color:#1f2937;
}

/* HEADER */
.header{
  background:#fff;
  padding:14px 40px;
  display:flex;
  align-items:center;
  gap:18px;
  border-bottom:1px solid #e5e7eb;
}
.header img{height:28px}

/* MAIN */
.main{
  max-width:1150px;
  margin:40px auto;
  display:grid;
  grid-template-columns:1.35fr 1fr;
  gap:40px;
  padding:0 20px;
}

/* FORM */
.form-box{
  background:#fff;
  padding:36px;
  border-radius:10px;
}

.steps{
  display:flex;
  gap:25px;
  margin-bottom:30px;
  font-size:14px;
}
.step{
  display:flex;
  align-items:center;
  gap:8px;
  color:#9ca3af;
}
.step.active{
  color:#2563eb;
  font-weight:600;
}
.step i{
  background:#2563eb;
  color:#fff;
  border-radius:50%;
  font-size:11px;
  padding:6px;
}

.input-group{
  margin-bottom:18px;
}
.input-group label{
  display:block;
  font-size:13px;
  margin-bottom:6px;
  color:#374151;
}
.input-group input{
  width:100%;
  padding:14px;
  border-radius:6px;
  border:1px solid #d1d5db;
  font-size:14px;
}

.input-group input:focus{
  outline:none;
  border-color:#2563eb;
}

.relative{position:relative}

.otp-btn{
  position:absolute;
  right:12px;
  top:36px;
  background:none;
  border:none;
  color:#2563eb;
  font-weight:600;
  cursor:pointer;
}

.terms{
  font-size:13px;
  color:#6b7280;
  margin:22px 0;
}
.terms a{
  color:#2563eb;
  text-decoration:none;
}

.btn{
  background:#2563eb;
  color:#fff;
  border:none;
  padding:14px 26px;
  border-radius:6px;
  font-size:15px;
  cursor:pointer;
  font-weight:600;
  display:inline-flex;
  align-items:center;
  gap:10px;
}

/* RIGHT SIDE */
.right{
  display:flex;
  flex-direction:column;
  gap:25px;
}

.testimonial{
  background:#fff;
  padding:22px;
  border-radius:10px;
  display:flex;
  gap:15px;
  align-items:center;
}
.testimonial img{
  width:48px;
  height:48px;
  border-radius:50%;
}
.testimonial p{
  font-size:14px;
  line-height:1.4;
}
.testimonial span{
  font-size:12px;
  color:#6b7280;
}

.banner{
  background:#0073e6;
  border-radius:14px;
  padding:20px;
  color:#fff;
  text-align:center;
}
.banner img{
  width:100%;
  border-radius:10px;
  margin:15px 0;
}
.banner .stats{
  background:#facc15;
  color:#000;
  padding:10px;
  border-radius:8px;
  font-weight:600;
  font-size:13px;
}

/* WHY SECTION */
.why{
  background:#eef6ff;
  padding:60px 20px;
  text-align:center;
}
.why h2{
  font-size:32px;
  margin-bottom:40px;
}
.icons{
  display:grid;
  grid-template-columns:repeat(4,1fr);
  gap:40px;
  max-width:900px;
  margin:auto;
}
.icon{
  background:#fff;
  width:90px;
  height:90px;
  border-radius:50%;
  display:flex;
  align-items:center;
  justify-content:center;
  margin:auto;
  font-size:26px;
  color:#2563eb;
  box-shadow:0 4px 12px rgba(0,0,0,.08);
}

/* RESPONSIVE */
@media(max-width:900px){
  .main{grid-template-columns:1fr}
  .icons{grid-template-columns:repeat(2,1fr)}
}

/* flipkart selling   start*/
