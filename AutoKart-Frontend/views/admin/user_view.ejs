<style>
table {
  border-collapse: collapse;
  font-family: Arial;
}
td, th {
  border: 1px solid #ddd;
  text-align: center;
}
tr:nth-child(even) {
  background: #f7f9fb;
}
</style>

<h2>User Information</h2>

<% if (data.length > 0) { %>
<p><b>User ID:</b> <%= data[0].user_id %></p>
<p><b>Name:</b> <%= data[0].user_first_name %> <%= data[0].user_last_name %></p>
<p><b>Username:</b> <%= data[0].user_user_name %></p>
<p><b>Email:</b> <%= data[0].user_email %></p>
<% } %>

<hr>

<h3>ðŸ“¦ Purchase History</h3>

<table border="1" width="100%" cellpadding="8">
<tr style="background-color: blue;color:white;">
  <th>Sr No</th>
  <th>Product</th>
  <th>Price</th>
  <th>Qty</th>
  <th>Payment</th>
  <th>Date</th>
</tr>

<%
let srno = 1;
let totalAmount = 0;
let orderFound = false;

data.forEach(row => {
  if (row.order_product_id) {
    orderFound = true;
    totalAmount += row.order_price * row.order_qty;
%>
<tr>
  <td><%= srno++ %></td>
  <td><%= row.order_product_name %></td>
  <td>â‚¹ <%= row.order_price %></td>
  <td><%= row.order_qty %></td>
  <td>
    <% if (row.payment_status === "Paid") { %>
      <span style="color:green;font-weight:bold;">Successful</span>
    <% } else { %>
      <span style="color:orange;font-weight:bold;">Pending</span>
    <% } %>
  </td>
  <td><%= row.order_date %></td>
</tr>
<% } }); %>

<% if (!orderFound) { %>
<tr>
  <td colspan="6">No purchases found</td>
</tr>
<% } else { %>
<tr>
  <td colspan="3"></td>
  <td colspan="2"><b>Total Amount</b></td>
  <td><b>â‚¹ <%= totalAmount %></b></td>
</tr>
<% } %>
</table>
