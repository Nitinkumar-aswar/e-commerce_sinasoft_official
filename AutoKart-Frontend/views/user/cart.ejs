<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Your Cart | AutoKart</title>

  <style>
    body {
      margin: 0;
      background: #f1f3f6;
      font-family: Arial, sans-serif;
    }

    .cart-container {
      max-width: 1300px;
      margin: 20px auto;
      display: flex;
      gap: 20px;
      padding: 0 20px;
      align-items: flex-start;
    }

    /* LEFT */
    .cart-left {
      flex: 3;
      background: #fff;
      padding: 20px;
      border-radius: 6px;
    }

    .cart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .cart-title {
      font-size: 22px;
      font-weight: 600;
    }

    .top-checkout-btn {
      padding: 10px 18px;
      background: #fb641b;
      color: #fff;
      border: none;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      border-radius: 2px;
    }

    .cart-item {
      display: flex;
      gap: 20px;
      padding: 20px 0;
      border-bottom: 1px solid #e0e0e0;
    }

    .cart-item img {
      width: 120px;
      height: 120px;
      object-fit: contain;
      border: 1px solid #ddd;
      border-radius: 4px;
      background: #fff;
    }

    .cart-item-details {
      flex: 1;
    }

    .cart-item-name {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 6px;
    }

    .cart-stock {
      font-size: 13px;
      color: #388e3c;
      margin-bottom: 12px;
    }

    .qty-controls {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .qty-btn {
      width: 32px;
      height: 32px;
      border: 1px solid #ccc;
      background: #fff;
      cursor: pointer;
      font-size: 18px;
    }

    .qty-input {
      width: 45px;
      height: 32px;
      text-align: center;
      border: 1px solid #ccc;
    }

    .remove-btn {
      margin-left: 15px;
      background: none;
      border: none;
      color: #2874f0;
      cursor: pointer;
      font-size: 14px;
    }

    .cart-item-price {
      font-size: 18px;
      font-weight: bold;
      white-space: nowrap;
    }

    /* RIGHT */
    .cart-right {
      flex: 1.3;
      background: #fff;
      padding: 20px;
      border-radius: 6px;
      height: fit-content;
    }

    .price-title {
      font-size: 18px;
      font-weight: 600;
      border-bottom: 1px solid #e0e0e0;
      padding-bottom: 10px;
      margin-bottom: 15px;
    }

    .price-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      font-size: 14px;
    }

    .price-total {
      font-size: 18px;
      font-weight: bold;
      margin-top: 15px;
      border-top: 1px dashed #ccc;
      padding-top: 15px;
      display: flex;
      justify-content: space-between;
    }

    .checkout-btn {
      width: 100%;
      margin-top: 20px;
      padding: 14px;
      background: #fb641b;
      color: #fff;
      border: none;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      border-radius: 2px;
    }

    .empty-cart {
      text-align: center;
      padding: 40px;
      font-size: 16px;
    }



    /* ================= RESPONSIVE ================= */

/* ================= FLIPKART STYLE MOBILE CART ================= */
@media (max-width: 768px) {

  /* PAGE PADDING */
  .cart-container {
    display: flex;
    flex-direction: column;
    padding: 12px;
    gap: 14px;
  }

  /* LEFT CART ITEMS */
  .cart-left {
    width: 100%;
  }

  /* EACH PRODUCT CARD */
  .cart-item,
  .cart-row {
    display: flex;
    gap: 12px;
    background: #fff;
    padding: 14px;
    border-radius: 8px;
    margin-bottom: 12px;
  }

  /* PRODUCT IMAGE â€” BIG */
  .cart-item img {
    width: 90px;
    height: 90px;
    object-fit: contain;
  }

  /* PRODUCT DETAILS */
  .cart-item-details {
    flex: 1;
  }

  .cart-item-details h4 {
    font-size: 15px;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 6px;
  }

  .cart-item-details .stock {
    font-size: 12px;
    color: green;
    margin-bottom: 6px;
  }

  /* PRICE */
  .cart-price {
    font-size: 16px;
    font-weight: 700;
    margin-top: 6px;
  }

  /* QTY CONTROLS */
  .quantity,
  .qty-controls {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-top: 8px;
  }

  .quantity button {
    width: 34px;
    height: 34px;
    font-size: 18px;
  }

  .quantity input {
    width: 42px;
    height: 34px;
    font-size: 15px;
    text-align: center;
  }

  /* PRICE DETAILS â€” NEECHHE */
  .cart-right,
  .price-details {
    width: 100%;
    margin-top: 8px;
    background: #fff;
    padding: 16px;
    border-radius: 8px;
  }

  .price-details h3 {
    font-size: 15px;
    margin-bottom: 10px;
  }

  .price-details p {
    font-size: 14px;
    margin: 6px 0;
    display: flex;
    justify-content: space-between;
  }

  .price-details .total {
    font-size: 16px;
    font-weight: 700;
    margin-top: 10px;
  }

  /* CHECKOUT BUTTON â€” BIG FLIPKART STYLE */
  .checkout-btn,
  .proceed-btn,
  .checkout-button {
    width: 100%;
    height: 52px;
    font-size: 16px;
    font-weight: 700;
    border-radius: 6px;
    background: #fb641b;
    color: #fff;
    margin-top: 12px;
  }

}


  </style>
</head>

<body>

<%- include('partials/header') %>

<%
  let totalItems = 0;
  let totalPrice = 0;

  if (cart && cart.length) {
    cart.forEach(item => {
      totalItems += item.quantity;
      totalPrice += item.price * item.quantity;
    });
  }
%>

<div class="cart-container">

  <!-- LEFT -->
  <div class="cart-left">

    <div class="cart-header">
      <div class="cart-title">My Cart (<%= totalItems %> items)</div>

      
    </div>

    <% if (!cart || cart.length === 0) { %>

      <div class="empty-cart">ðŸ›’ Your cart is empty</div>

    <% } else { %>

      <% cart.forEach(item => { %>

        <div class="cart-item">

          <img src="/uploads/<%= item.image %>" alt="<%= item.product_name %>">

          <div class="cart-item-details">

            <div class="cart-item-name"><%= item.product_name %></div>
            <div class="cart-stock">In stock</div>

            <div class="qty-controls">

  <form method="POST" action="/cart/update" style="display:flex; gap:8px; align-items:center;">
    <input type="hidden" name="product_id" value="<%= item.product_id %>">

    <button type="submit" name="action" value="decrease" class="qty-btn">âˆ’</button>

    <input type="text" class="qty-input" value="<%= item.quantity %>" readonly>

    <button type="submit" name="action" value="increase" class="qty-btn">+</button>
  </form>

  <form method="POST" action="/cart/remove">
    <input type="hidden" name="product_id" value="<%= item.product_id %>">
    <button class="remove-btn">Delete</button>
  </form>

</div>


          </div>

          <div class="cart-item-price">
            â‚¹ <%= item.price * item.quantity %>
          </div>

        </div>

      <% }) %>

    <% } %>

  </div>

  <!-- RIGHT -->
  <div class="cart-right">

    <div class="price-title">PRICE DETAILS</div>

    <div class="price-row">
      <span>Price (<%= totalItems %> items)</span>
      <span>â‚¹ <%= totalPrice %></span>
    </div>

    <div class="price-row">
      <span>Delivery Charges</span>
      <span style="color:green;">FREE</span>
    </div>

    <div class="price-total">
      <span>Total Amount</span>
      <span>â‚¹ <%= totalPrice %></span>
    </div>

 <form action="/create-checkout" method="POST">
  <button type="submit" class="checkout-btn">
    Proceed to Checkout
  </button>
</form>

</form>



  </div>

</div>

</body>
</html>
