<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Checkout | AutoKart</title>


  <style>
   
    body {
      margin: 0;
      background: #eaeded;
      font-family: Arial, sans-serif;
    }

  

    .checkout-left {
      flex: 3;
      background: #fff;
      padding: 20px;
    }

    .section {
      border-bottom: 1px solid #ddd;
      padding-bottom: 20px;
      margin-bottom: 20px;
    }

    .section h2 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .address-box {
      font-size: 14px;
      line-height: 1.6;
    }

    .address-actions a {
      font-size: 13px;
      color: #007185;
      margin-right: 15px;
      text-decoration: none;
    }

    .payment-method {
      padding: 14px;
      border-top: 1px solid #eee;
      font-size: 14px;
      cursor: pointer;
    }

    .payment-method.active {
      background: #fff8f0;
      border-left: 3px solid #ff9900;
    }

   

    select, input[type="text"] {
      padding: 6px;
      width: 260px;
      margin-top: 8px;
    }

  

    .muted {
      color: #555;
      font-size: 12px;
      margin-top: 6px;
    }


  .place-btn {
  width: 100%;
  background: #ffd814;
  border: 1px solid #fcd200;
  padding: 11px;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  border-radius: 3px;
  margin-bottom: 16px;
}

.place-btn:hover {
  background: #f7ca00;
}


    .summary-row {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      margin-bottom: 8px;
    }

    .summary-total {
      font-weight: bold;
      border-top: 1px solid #ddd;
      padding-top: 10px;
    }

    .mini-product {
      display: flex;
      gap: 12px;
      margin-top: 15px;
    }

    .mini-product img {
      width: 80px;
      height: 80px;
      object-fit: contain;
      border: 1px solid #e0e0e0;
      background: #fff;
    }

    .mini-product-name {
      font-size: 13px;
      line-height: 1.4;
      max-width: 240px;
    }
    
.mini-cart-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.mini-cart-item {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.mini-cart-item img {
  width: 70px;
  height: 70px;
  object-fit: contain;
  border: 1px solid #e0e0e0;
  background: #fff;
}

.mini-cart-info {
  font-size: 13px;
  line-height: 1.4;
}



/* ============================
   ADDRESS MODAL â€“ PERFECT CENTER
============================ */

.address-modal {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
  z-index: 9999;

  display: none;              /* hidden by default */
  align-items: center;        /* vertical center */
  justify-content: center;    /* horizontal center */
}

.address-modal-box {
  background: #ffffff;
  width: 520px;
  max-width: 92%;
  padding: 24px;
  border-radius: 6px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.25);
}

/* Grid layout */
.address-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.address-grid input,
.address-grid select {
  width: 100%;
  padding: 10px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

/* Full width fields */
.address-grid input[name="address_line"],
.address-grid input[name="pincode"] {
  grid-column: span 2;
}

/* Buttons */
.address-actions {
  display: flex;
  gap: 12px;
  margin-top: 18px;
}

.btn-primary {
  flex: 1;
  background: #ffd814;
  border: 1px solid #fcd200;
  padding: 10px;
  font-size: 14px;
  cursor: pointer;
}

.btn-secondary {
  flex: 1;
  background: #f1f1f1;
  border: 1px solid #ccc;
  padding: 10px;
  font-size: 14px;
  cursor: pointer;
}


/* =============================
   CHECKOUT DESKTOP LAYOUT
============================= */

.page-wrapper {
  max-width: 1400px;   /* ðŸ”¥ tighter */
  margin: auto;
  padding: 18px;        /* ðŸ”¥ less grey */
  display: flex;
  gap: 14px;           /* ðŸ”¥ closer columns */
  align-items: flex-start;
}


.checkout-left {
  flex: 1;
  max-width: none;
  background: #fff;
  padding: 20px;
}


.checkout-right-wrapper {
  width: 350px;
  flex-shrink: 0;
}

.checkout-right {
  width: 100%;
  box-sizing: border-box;   /* ðŸ”¥ FIX */
  background: #fff;
  padding: 20px;
  border: 1px solid #ddd;
  position: sticky;
  top: 20px;
}



/* =============================
   RESPONSIVE BREAKPOINTS
============================= */

/* Tablet */
@media (max-width: 992px) {
  .page-wrapper {
    flex-direction: column;
    padding: 12px;
  }

  .checkout-right {
    position: static; /* ðŸ”¥ STOP STICKY */
    margin-top: 16px;
  }
}

/* Mobile */
@media (max-width: 576px) {

  .page-wrapper {
    padding: 8px;
    gap: 12px;
  }

  .checkout-left,
  .checkout-right {
    padding: 14px;
  }

  .section h2 {
    font-size: 15px;
  }

  .address-box {
    font-size: 13px;
  }

  .payment-method {
    font-size: 13px;
    padding: 12px;
  }

  .summary-row {
    font-size: 13px;
  }

  .summary-total {
    font-size: 14px;
  }

  .place-btn {
    font-size: 15px;
    padding: 14px;
  }
}

/* Address modal mobile */
@media (max-width: 520px) {
  .address-grid {
    grid-template-columns: 1fr;
  }

  .address-grid input,
  .address-grid select {
    grid-column: span 1;
  }
}


  </style>
</head>

<body>

<%- include("partials/header") %>

<div class="page-wrapper">

  <!-- LEFT -->
  <div class="checkout-left">
<!-- =========================
     DELIVERY ADDRESS
========================= -->
<div class="section">
  <h2>1. Delivery address</h2>

  <% if (!selectedAddress) { %>
    <!-- NO ADDRESS STATE -->
    <div style="padding:15px; background:#f7f7f7; border:1px dashed #ccc;">
      <p style="margin:0 0 10px 0;">No delivery address added</p>
      <button
        type="button"
        class="place-btn"
        style="width:auto;"
        onclick="openAddressModal()"
      >
        Add Address
      </button>
    </div>

  <% } else { %>
    <!-- SELECTED ADDRESS DISPLAY -->
    <div class="address-box">
      <strong><%= selectedAddress.full_name %></strong><br>
      <%= selectedAddress.address_line %><br>
      <%= selectedAddress.city %>, <%= selectedAddress.state %> - <%= selectedAddress.pincode %>
    </div>

    <!-- ADDRESS ACTIONS -->
    <div class="address-actions">
      <a href="javascript:void(0)" onclick="openAddressList()">Change</a>


      <a href="javascript:void(0)" onclick="editAddress()">Edit</a>
      <a href="javascript:void(0)" onclick="openAddressModal()">Add new address</a>
    </div>
  <% } %>
</div>




  <!-- Razorpay -->
<div class="section">
  <h2>2. Select a payment method</h2>

  <div class="payment-method" id="razorpay" onclick="selectPayment('razorpay')">
    <input type="radio" name="pay"> Pay Online (Razorpay)
    <div class="payment-content muted">
      UPI, Cards, Net Banking supported
    </div>
  </div>

  <div class="payment-method" id="cod" onclick="selectPayment('cod')">
    <input type="radio" name="pay"> Cash on Delivery
    <div class="payment-content muted">
      Pay when the order is delivered
    </div>
  </div>
</div>
</div>

  <!-- RIGHT -->
 <div class="checkout-right-wrapper">
  <div class="checkout-right">
    <form action="/pay" method="POST" onsubmit="return validatePayment()">



    <input type="hidden" name="checkout_id" value="<%= checkout.checkout_id %>">
    <input type="hidden" name="paymentMethod" id="paymentMethod">

    <button type="submit" class="place-btn">Use this payment method</button>

    <!-- SUMMARY -->
    <div class="summary-row">
      <span>Items:</span>
      <span>â‚¹<%= checkout.total_amount %></span>
    </div>

    <div class="summary-row">
      <span>Delivery:</span>
      <span style="color:green">FREE</span>
    </div>

    <div class="summary-row summary-total">
      <span>Order Total:</span>
      <span>â‚¹<%= checkout.total_amount %></span>
    </div>

    <!-- MINI CART -->
    <div class="mini-cart-list">
     <% for (var i = 0; i < items.length; i++) { 
     var item = items[i];
%>
  <div class="mini-cart-item">
    <img src="/uploads/<%= item.product_image %>">
    <div class="mini-cart-info">
      <%= item.product_name %><br>
      <small>Qty: <%= item.quantity %></small>
    </div>
  </div>
<% } %>

    </div>

      </form>
  </div>
</div>

<div id="addressModal" class="address-modal">
  <div class="address-modal-box">
    <h3>Add Delivery Address</h3>

    <form id="addressForm">


      <div class="address-grid">
        <input name="full_name" required placeholder="Full Name">
        <input name="mobile" required placeholder="Mobile Number">

        <input name="address_line" required placeholder="House No, Street, Area">
        <input name="landmark" placeholder="Landmark (Optional)">

        <input name="city" required placeholder="City">
        <input name="state" required placeholder="State">

        <input name="pincode" required placeholder="Pincode">

        <select name="address_type">
          <option value="HOME">Home</option>
          <option value="WORK">Work</option>
          <option value="OTHER">Other</option>
        </select>
      </div>

      <div class="address-actions">
        <button type="button" class="btn-primary" onclick="saveAddress()">
  Save Address
</button>

        <button type="button" class="btn-secondary" onclick="closeAddressModal()">Cancel</button>
      </div>

    </form>
  </div>
</div>

<!-- =========================
   ADDRESS LIST MODAL (CHANGE)
========================= -->
<div id="addressListModal" class="address-modal">
  <div class="address-modal-box">
    <h3>Select Delivery Address</h3>

    <% if (!addresses || addresses.length === 0) { %>

      <p>No saved addresses</p>

    <% } else { %>

      <% for (var i = 0; i < addresses.length; i++) { %>
        <% var addr = addresses[i]; %>

        <div style="border:1px solid #ddd; padding:12px; margin-bottom:10px;">

          <% if (selectedAddress && selectedAddress.address_id == addr.address_id) { %>
            <label style="cursor:pointer; display:block;">
              <input type="radio" name="selected_address" value="<%= addr.address_id %>" checked>
              <strong><%= addr.full_name %></strong><br>
              <%= addr.address_line %>, <%= addr.city %><br>
              <small><%= addr.state %> - <%= addr.pincode %></small>
            </label>
          <% } else { %>
            <label style="cursor:pointer; display:block;">
              <input type="radio" name="selected_address" value="<%= addr.address_id %>">
              <strong><%= addr.full_name %></strong><br>
              <%= addr.address_line %>, <%= addr.city %><br>
              <small><%= addr.state %> - <%= addr.pincode %></small>
            </label>
          <% } %>

         

        </div>

      <% } %>

    <% } %>

    <div class="address-actions">
      <button class="btn-primary" onclick="confirmAddressSelection()">
        Deliver to this address
      </button>
      <button class="btn-secondary" onclick="closeAddressList()">
        Cancel
      </button>
    </div>

  </div>
</div>


<script type="application/json" id="checkout-data">
<%- JSON.stringify({
  addressExists: !!selectedAddress,
  currentAddress: selectedAddress || null,
  allAddresses: addresses || []
}) %>
</script>
<script>
  const checkoutData = JSON.parse(
    document.getElementById("checkout-data").textContent
  );

  window.addressExists = checkoutData.addressExists;
  window.currentAddress = checkoutData.currentAddress;
  window.allAddresses = checkoutData.allAddresses;
</script>



<script>
/* ============================
   PAYMENT SELECTION
============================ */
function selectPayment(method) {
  document.getElementById("paymentMethod").value = method;

  document.querySelectorAll(".payment-method").forEach(el => {
    el.classList.remove("active");
    const radio = el.querySelector("input[type=radio]");
    if (radio) radio.checked = false;
  });

  const active = document.getElementById(method);
  if (active) {
    active.classList.add("active");
    const radio = active.querySelector("input[type=radio]");
    if (radio) radio.checked = true;
  }
}


/* ============================
   ADDRESS MODAL HANDLING
============================ */
function openAddressModal() {
  const form = document.getElementById("addressForm");

  // clear previous values
  form.reset();

  // ðŸ”´ IMPORTANT: remove addressId so INSERT happens
  delete form.dataset.addressId;

  document.getElementById("addressModal").style.display = "flex";
}


function closeAddressModal() {
  document.getElementById("addressModal").style.display = "none";
}

/* ============================
   EDIT ADDRESS
============================ */
function editAddress() {
  if (!window.currentAddress) return;

  openAddressModal();

  const addr = window.currentAddress;

  document.querySelector('[name="full_name"]').value = addr.full_name || '';
  document.querySelector('[name="mobile"]').value = addr.mobile || '';
  document.querySelector('[name="address_line"]').value = addr.address_line || '';
  document.querySelector('[name="landmark"]').value = addr.landmark || '';
  document.querySelector('[name="city"]').value = addr.city || '';
  document.querySelector('[name="state"]').value = addr.state || '';
  document.querySelector('[name="pincode"]').value = addr.pincode || '';
  document.querySelector('[name="address_type"]').value = addr.address_type || 'HOME';

 document.getElementById("addressForm").dataset.addressId = addr.address_id;

}

/* ============================
   FINAL CHECKOUT VALIDATION
============================ */
function validatePayment() {
  if (!window.addressExists) {
    alert("Please add delivery address");
    openAddressModal();
    return false;
  }

  const method = document.getElementById("paymentMethod").value;
  if (!method) {
    alert("Please select a payment method");
    return false;
  }

  return true;
}

/* ============================
   SAVE ADDRESS (AJAX)
============================ */
let savingAddress = false;

function saveAddress() {
  if (savingAddress) return;
  savingAddress = true;

  const form = document.getElementById("addressForm");
  const addressId = form.dataset.addressId || "";

  const formData = new URLSearchParams(new FormData(form));
  if (addressId) {
    formData.append("address_id", addressId);
  }

  fetch("/save-address", {
    method: "POST",
    headers: {
      "Content-Type": "application/x-www-form-urlencoded"
    },
    body: formData.toString()
  })
    .then(res => res.json())
    .then(data => {
      savingAddress = false;

      if (data.success) {
        closeAddressModal();
        location.reload();
      } else {
        alert("Failed to save address");
      }
    })
    .catch(err => {
      savingAddress = false;
      console.error(err);
      alert("Server error");
    });
}

</script>
<script>
function openAddressList() {
  document.getElementById("addressListModal").style.display = "flex";
}

function closeAddressList() {
  document.getElementById("addressListModal").style.display = "none";
}
</script>
<script>
function confirmAddressSelection() {
  const selected = document.querySelector(
    'input[name="selected_address"]:checked'
  );

  if (!selected) {
    alert("Please select an address");
    return;
  }

  const addressId = selected.value;

  fetch("/checkout/select-address", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify({ address_id: addressId })
  })
    .then(res => res.json())
    .then(data => {
      if (data.success) {
        location.reload();
      } else {
        alert("Failed to select address");
      }
    });
}
</script>
