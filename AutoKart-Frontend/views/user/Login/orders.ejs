<body>

<div class="orders-page">

  <!-- LEFT FILTERS -->
  <div class="orders-filters">
    <h3>Filters</h3>

    <div class="filter-group">
      <h4>ORDER STATUS</h4>
      <label><input type="checkbox"> On the way</label>
      <label><input type="checkbox"> Delivered</label>
      <label><input type="checkbox"> Cancelled</label>
      <label><input type="checkbox"> Returned</label>
    </div>

    <div class="filter-group">
      <h4>ORDER TIME</h4>
      <label><input type="checkbox"> Last 30 days</label>
      <label><input type="checkbox"> 2024</label>
      <label><input type="checkbox"> 2023</label>
      <label><input type="checkbox"> Older</label>
    </div>
  </div>

  <!-- RIGHT CONTENT -->
  <div class="orders-content">

    <!-- SEARCH -->
    <div class="orders-search">
      <input type="text" placeholder="Search your orders here">
      <button>Search Orders</button>
    </div>

    <% if (!orders || orders.length === 0) { %>

      <div class="no-orders">
        You have not placed any orders yet.
      </div>

    <% } else { %>

      <% orders.forEach(order => { %>

        <a href="/orders/<%= order.order_id %>" style="text-decoration:none; color:inherit;">
  <div class="order-card">

          <img
  src="/uploads/<%= order.product_image %>"
  alt="<%= order.product_name %>"
>




          <div class="order-info">
            <h4><%= order.product_name %></h4>
            <p>Order ID: <%= order.order_id %></p>
            <p>Qty: <%= order.quantity %></p>

            <% if (order.status === 'PLACED') { %>

              <div class="order-status status-delivered">
                Order placed on
                <%= new Date(order.created_at).toDateString() %>
              </div>

              <div class="review-link">
                ‚≠ê Rate & Review Product
              </div>

            <% } else if (order.status === 'CANCELLED') { %>

              <div class="order-status status-cancelled">
                Cancelled
              </div>

            <% } %>

          </div>

          <div class="order-price">
            ‚Çπ<%= order.price %>
          </div>
        </div>

      <% }) %>

    <% } %>

  </div>
</div>

</body>
