<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders | AutoKart</title>

  <style>
    body {
      background: #f1f3f6;
      font-family: Arial, Helvetica, sans-serif;
    }

    /* ===============================
       PAGE WRAPPER
    ================================ */
    .orders-page {
      max-width: 1300px;
      margin: 20px auto;
      display: flex;
      gap: 20px;
    }

    /* ===============================
       LEFT FILTER PANEL
    ================================ */
    .orders-filters {
      width: 260px;
      background: #ffffff;
      padding: 15px;
      border-radius: 4px;
      height: fit-content;
    }

    .orders-filters h3 {
      font-size: 16px;
      margin-bottom: 15px;
      color: #212121;
    }

    .filter-group {
      margin-bottom: 20px;
    }

    .filter-group h4 {
      font-size: 14px;
      margin-bottom: 10px;
      color: #333;
    }

    .filter-group label {
      display: block;
      font-size: 13px;
      margin-bottom: 6px;
      color: #555;
      cursor: pointer;
    }

    .filter-group input {
      margin-right: 6px;
    }

    /* ===============================
       RIGHT CONTENT
    ================================ */
    .orders-content {
      flex: 1;
    }

    /* ===============================
       ORDERS SEARCH (SCOPED)
    ================================ */
    .orders-search {
      display: flex;
      margin-bottom: 15px;
    }

    .orders-search input {
      flex: 1;
      height: 40px;
      padding: 0 12px;
      border: 1px solid #ccc;
      border-right: none;
      border-radius: 2px 0 0 2px;
      font-size: 14px;
      outline: none;
    }

    .orders-search button {
      width: 150px;
      height: 40px;
      border: none;
      background: #2874f0;
      color: #ffffff;
      font-size: 14px;
      cursor: pointer;
      border-radius: 0 2px 2px 0;
    }

    /* ===============================
       ORDER CARD
    ================================ */
    .order-card {
      background: #ffffff;
      border-radius: 4px;
      padding: 15px;
      display: flex;
      align-items: center;
      gap: 20px;
      margin-bottom: 12px;
    }

    .order-card img {
      width: 90px;
      height: 90px;
      object-fit: contain;
    }

    .order-info {
      flex: 1;
    }

    .order-info h4 {
      font-size: 14px;
      margin-bottom: 6px;
      color: #212121;
    }

    .order-info p {
      font-size: 12px;
      color: #666;
      margin-bottom: 4px;
    }

    .order-price {
      font-size: 14px;
      font-weight: bold;
      color: #212121;
      margin-right: 40px;
    }

    .order-status {
      font-size: 13px;
      font-weight: bold;
      margin-top: 5px;
    }

    .status-delivered {
      color: green;
    }

    .status-cancelled {
      color: red;
    }

    .review-link {
      font-size: 13px;
      color: #2874f0;
      cursor: pointer;
      margin-top: 6px;
    }

    /* ===============================
       EMPTY STATE
    ================================ */
    .no-orders {
      background: #ffffff;
      padding: 40px;
      text-align: center;
      color: #777;
      border-radius: 4px;
    }


    /* =================================================
   üî• MOBILE ‚Äì FILTERS NICHE + BUTTON SMALL
================================================= */
@media (max-width: 768px) {

  /* layout column */
  .orders-page {
    flex-direction: column;
  }

  /* orders upar */
  .orders-content {
    order: 1;
    width: 100%;
  }

  /* filters niche */
  .orders-filters {
    order: 2;
    width: 100%;
    margin-top: 16px;
    padding: 14px;
    border-radius: 8px;
  }

  /* üîµ ONLY CHANGE: BLUE BUTTON SMALL */
  .orders-search button {
    width: 110px;      /* ‚¨Ö smaller */
    height: 36px;      /* ‚¨Ö shorter */
    font-size: 13px;   /* ‚¨Ö text small */
  }

  .orders-search input {
    height: 36px;
    font-size: 14px;
  }
}
  </style>
</head>

<body>

<div class="orders-page">

  <!-- LEFT FILTERS -->
  <div class="orders-filters">
    <h3>Filters</h3>

    <div class="filter-group">
      <h4>ORDER STATUS</h4>
      <label><input type="checkbox"> On the way</label>
      <label><input type="checkbox"> Delivered</label>
      <label><input type="checkbox"> Cancelled</label>
      <label><input type="checkbox"> Returned</label>
    </div>

    <div class="filter-group">
      <h4>ORDER TIME</h4>
      <label><input type="checkbox"> Last 30 days</label>
      <label><input type="checkbox"> 2024</label>
      <label><input type="checkbox"> 2023</label>
      <label><input type="checkbox"> Older</label>
    </div>
  </div>

  <!-- RIGHT CONTENT -->
  <div class="orders-content">

    <!-- SEARCH -->
    <div class="orders-search">
      <input type="text" placeholder="Search your orders here">
      <button>Search Orders</button>
    </div>

    <% if (!orders || orders.length === 0) { %>

      <div class="no-orders">
        You have not placed any orders yet.
      </div>

    <% } else { %>

      <% orders.forEach(order => { %>

        <a href="/orders/<%= order.order_id %>" style="text-decoration:none; color:inherit;">
  <div class="order-card">

          <img
  src="/uploads/<%= order.product_image %>"
  alt="<%= order.product_name %>"
>




          <div class="order-info">
            <h4><%= order.product_name %></h4>
            <p>Order ID: <%= order.order_id %></p>
            <p>Qty: <%= order.quantity %></p>

            <% if (order.status === 'PLACED') { %>

              <div class="order-status status-delivered">
                Order placed on
                <%= new Date(order.created_at).toDateString() %>
              </div>

              <div class="review-link">
                ‚≠ê Rate & Review Product
              </div>

            <% } else if (order.status === 'CANCELLED') { %>

              <div class="order-status status-cancelled">
                Cancelled
              </div>

            <% } %>

          </div>

          <div class="order-price">
            ‚Çπ<%= order.price %>
          </div>
        </div>

      <% }) %>

    <% } %>

  </div>
</div>

</body>
</html>
