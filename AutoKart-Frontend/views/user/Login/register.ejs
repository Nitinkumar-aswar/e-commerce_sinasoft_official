  <style>
    * {margin:0; padding:0; box-sizing:border-box; font-family: Arial, Helvetica, sans-serif;}

    body {
      background: #f1f3f6;
      min-height: 100vh;
    }

    /* TOPBAR */
    .topbar {
      background: #2874f0;
      padding: 10px 20px;
      display: flex;
      align-items: center;
      color: #fff;
      gap: 20px;
    }

    .topbar .logo img {
      height: 35px;
    }

    .topbar .search {
      flex: 1;
      max-width: 1100px; /* Match login page search width */
    }

    .topbar .search input {
      width: 100%;
      padding: 6px 8px;
      border-radius: 2px;
      border: none;
      font-size: 14px;
    }

    /* MAIN CONTAINER */
    .main-container {
      width: 670px;
      max-width: 95%;
      margin: 30px auto;
      display: flex;
      box-shadow: 0 4px 10px rgba(0,0,0,0.15);
      background: white;
      border-radius: 8px;
      overflow: hidden;
    }

    /* LEFT BOX */
    .left-box {
      width: 40%;
      background: #2874f0;
      color: white;
      padding: 25px 20px 0 20px;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }

    .left-box h1 {
      font-size: 20px;
      margin-bottom: 5px;
    }

    .left-box p {
      font-size: 13px;
      color: #dbdbdb;
    }

    /* RIGHT BOX */
    .right-box {
      width: 60%;
      padding: 25px 20px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .right-box input {
      width: 100%;
      padding: 8px 0;
      margin-bottom: 15px;
      border: none;
      border-bottom: 1px solid #ccc;
      font-size: 13px;
    }

    .right-box input:focus {
      outline: none;
      border-bottom: 2px solid #2874f0;
    }


    .terms {
      font-size: 11px;
      color: #878787;
      margin-bottom: 15px;
    }

    .terms span {
      color: #2874f0;
      font-weight: bold;
      cursor: pointer;
    }

    .btn-primary {
      width: 100%;
      padding: 10px;
      background: #fb641b;
      color: white;
      border: none;
      font-size: 14px;
      cursor: pointer;
      margin-bottom: 12px;
      border-radius: 2px;
    }

    .btn-primary:hover {
      background: #e85b17;
    }

    .login-link {
      display: block;
      text-align: center;
      color: #2874f0;
      font-size: 13px;
      text-decoration: none;
    }

   /* ================= TABLET VIEW ================= */
@media (max-width: 991px){
  .login-wrapper{
    width:90%;
  }
  .login-left{
    padding:30px 20px;
  }
  .login-left h2{
    font-size:24px;
  }
}

