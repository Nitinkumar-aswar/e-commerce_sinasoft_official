      <input type="email" name="user_email" placeholder="Email" maxlength="50" required autocomplete="off">
      <input type="password" name="user_password" placeholder="Password" maxlength="20" required autocomplete="new-password" >

      <p class="terms">
        By continuing, you agree to AutoKart's
        <span>Terms of Use</span> and <span>Privacy Policy</span>.
      </p>

      <button type="submit" class="btn-primary">Create Account</button>
      <a href="/customer_login" class="login-link">Existing User? Log in</a>

    </form>
