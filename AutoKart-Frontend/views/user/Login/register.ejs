  }

  /* Hide left blue section */
  .login-left{
    display:none;
  }

  .login-right{
    width:100%;
    padding:30px 20px;
  }

  .login-right input{
    font-size:18px;
  }

  .otp-btn{
    font-size:18px;
    padding:14px;
  }
}

 @media(max-width:850px){
      .login-wrapper{width:95%;flex-direction:column}
