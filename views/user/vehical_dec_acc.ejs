<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>AutoKart – Vehicle Decorations</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f4f6f9;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Navbar */
    .navbar {
      background-color: #1e6bff;
      padding: 12px 0;
    }
    .navbar-brand {
      color: #fff !important;
      font-size: 24px;
      font-weight: 700;
      letter-spacing: 1px;
    }

    /* Page Title */
    .page-title {
      margin: 40px 0 30px;
      font-size: 28px;
      font-weight: 700;
      text-align: center;
      color: #1e6bff;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Product Card */
    .product-card {
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.12);
      overflow: hidden;
      transition: transform 0.3s, box-shadow 0.3s;
      display: flex;
      flex-direction: column;
      height: 100%;
    }
    .product-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }

    /* Image Box - uniform size */
    .img-box {
      width: 100%;
      height: 220px;
      background: #f1f1f1;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }
    .img-box img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s;
    }
    .product-card:hover .img-box img {
      transform: scale(1.05);
    }

    /* Card Body */
    .card-body {
      padding: 15px;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .card-body h5 {
      font-weight: 700;
      font-size: 18px;
      margin-bottom: 8px;
      color: #333;
    }
    .card-body p {
      font-size: 14px;
      color: #555;
      margin-bottom: 10px;
    }

    /* Price */
    .price {
      font-size: 16px;
      font-weight: 700;
      color: #1e6bff;
      margin-bottom: 12px;
    }

    /* Buy Button */
    .btn-buy {
      background: linear-gradient(90deg, #1e6bff, #4dabf7);
      color: #fff;
      border: none;
      font-weight: 600;
      padding: 8px 0;
      border-radius: 8px;
      transition: 0.3s;
      width: 100%;
    }
    .btn-buy:hover {
      background: linear-gradient(90deg, #0b4edb, #3b82f6);
      color: #fff;
      transform: scale(1.05);
    }

    /* Footer */
    footer {
      margin-top: 60px;
      background: #1e1e1e;
      color: #bbb;
      padding: 20px 0;
      text-align: center;
      font-size: 14px;
    }
  </style>
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar">
  <div class="container">
    <a class="navbar-brand" href="#">AutoKart</a>
  </div>
</nav>

<!-- PAGE CONTENT -->
<div class="container">
  <h4 class="page-title ">Vehicle Decorations</h4>
  <div class="row g-4">
    <% if(vehicle_decoration.length > 0){ %>
      <% vehicle_decoration.forEach((item) => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex">
          <div class="product-card w-100">
            <div class="img-box">
              <% if(item.file_vehicle){ %>
                <img src="/upload/<%= item.file_vehicle %>" alt="<%= item.vehicle_title %>">
              <% } else { %>
                <span>No Image</span>
              <% } %>
            </div>
            <div class="card-body">
              <div>
                <h5><%= item.vehicle_title %></h5>
                <p><%= item.vehicle_heading %></p>
                <% if(item.price && item.price > 0){ %>
                  <p class="price">₹<%= item.price %></p>
                <% } %>
              </div>
              <button class="btn-buy">Buy Now</button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-12 text-center">
        <p>No vehicle decorations available at the moment.</p>
      </div>
    <% } %>
  </div>
</div>



</body>
</html>
