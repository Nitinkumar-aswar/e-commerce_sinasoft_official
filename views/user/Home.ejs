<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flipkart Clone</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="user_cdn/css/styles.css">

  <style>
    /* ================= LOGIN DROPDOWN (EXISTING) ================= */
    .hover-dropdown:hover .animated-dropdown {
      opacity: 1;
      visibility: visible;
      transform: translateY(0) scale(1);
    }

    .animated-dropdown {
      display: block;
      opacity: 0;
      visibility: hidden;
      transform: translateY(20px) scale(0.95);
      transition: all 0.4s cubic-bezier(.4,0,.2,1);
      border-radius: 10px;
      padding: 10px 0;
    }

    .dropdown-anim {
      opacity: 0;
      transform: translateX(-15px);
      animation: slideFade 0.45s ease forwards;
    }

    @keyframes slideFade {
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .dropdown-item:hover {
      background: linear-gradient(90deg, #2874f0, #4f9cff);
      color: #fff;
      transform: translateX(8px);
    }

    .login-tooltip {
      position: absolute;
      top: 42px;
      left: 50%;
      transform: translateX(-50%);
      background: #000;
      color: #fff;
      padding: 6px 14px;
      font-size: 12px;
      border-radius: 20px;
      opacity: 0;
      visibility: hidden;
    }

    .tooltip-parent:hover .login-tooltip {
      opacity: 1;
      visibility: visible;
    }

    /* ================= SHOP DROPDOWN (NEW) ================= */
    .shop-menu {
      position: relative;
      margin-right: 16px;
    }

    .shop-btn {
      cursor: pointer;
      font-weight: 500;
      padding: 8px 10px;
      display: inline-block;
    }

    .shop-dropdown {
      position: absolute;
      top: 38px;
      left: 0;
      background: #fff;
      min-width: 280px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.15);
      border-radius: 8px;
      padding: 8px 0;
      opacity: 0;
      visibility: hidden;
      transform: translateY(10px);
      transition: all 0.25s ease;
      z-index: 1000;
    }

    .shop-dropdown a {
      display: block;
      padding: 10px 16px;
      text-decoration: none;
      font-size: 14px;
      color: #333;
    }

    .shop-dropdown a:hover {
      background-color: #f5f5f5;
    }

    .shop-menu:hover .shop-dropdown {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  </style>
</head>

<body>

<!-- ================= NAVBAR ================= -->
<nav class="navbar navbar-expand-lg navbar-light bg-light py-2">
  <div class="container">

    <a class="navbar-brand" href="#">AutoKart</a>

    <form class="d-flex flex-grow-1 mx-3">
      <input class="form-control navbar-search" type="search" placeholder="Search for Products, Brands and More">
      <button class="btn btn-outline-success ms-2" type="submit">
        <i class="bi bi-search"></i>
      </button>
    </form>

    <ul class="navbar-nav align-items-center">

      <!-- SHOP DROPDOWN (NEW) -->
      <li class="nav-item">
        <div class="shop-menu">
          <span class="shop-btn">shop</span>
          <div class="shop-dropdown">
            <a href="/products/decoration/all">All Decoration Products</a>
            <a href="/products/decoration/new">New Decoration Arrivals</a>
            <a href="/products/decoration/best">Best Selling Decoration Items</a>
            <a href="/products/decoration/trending">Trending Decoration Products</a>
            <a href="/products/decoration/combo">Decoration Combo Packs</a>
            <a href="/products/decoration/festive">Festive Decoration Specials</a>
          </div>
        </div>
      </li>

      <!-- LOGIN DROPDOWN (UNCHANGED) -->
      <li class="nav-item dropdown hover-dropdown tooltip-parent">
        <a class="nav-link login-link">
          <i class="bi bi-person"></i> Login
          <i class="bi bi-chevron-down"></i>
        </a>

        <span class="login-tooltip">Login</span>

        <ul class="dropdown-menu animated-dropdown shadow">
          <li class="dropdown-anim">
            <a class="dropdown-item" href="/user_login">
              <i class="bi bi-person-circle"></i> Customer Login
            </a>
          </li>

          <li class="dropdown-anim">
            <a class="dropdown-item" href="/my_profile">
              <i class="bi bi-person-badge"></i> My Profile
            </a>
          </li>
        </ul>
      </li>

      <li class="nav-item">
        <a class="nav-link"><i class="bi bi-cart"></i> Cart</a>
      </li>

     
    </ul>
  </div>
</nav>

<!-- ================= CATEGORIES ================= -->
<div class="container my-4">
  <div class="row text-center">
    <% 
      const categories = [
        ['Minutes','Minutes.webp'],
        ['Mobiles & Tablets','Mobiles & Tablets.webp'],
        ['Fashion','Fashion.webp'],
        ['Electronics','Electronics.jpeg'],
        ['Home & Furniture','Home & Furniture.jpeg'],
        ['Flight Bookings','Flight Bookings.webp'],
        ['Beauty & Food','Beauty & Food.jpg'],
        ['Grocery','Grocery.webp']
      ];
      categories.forEach(c => { 
    %>
      <div class="col category-icon">
        <img src="user_cdn/img/<%= c[1] %>">
        <div class="category-text"><%= c[0] %></div>
      </div>
    <% }) %>
  </div>
</div>

<!-- ================= SLIDER ================= -->
<div id="mainCarousel" class="carousel slide container" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="user_cdn/img/slider_image.webp" class="d-block w-100">
    </div>
    <div class="carousel-item">
      <img src="user_cdn/img/slider_image1.webp" class="d-block w-100">
    </div>
  </div>
</div>

<!-- ================= STATIC PRODUCTS ================= -->
<div class="container my-5">
  <h4>Best deals on smartphones</h4>
  <div class="row">
    <% 
      const staticProducts = [
        ['iphone14.webp','iPhone 14','₹79,900'],
        ['Galaxy S24.png','Galaxy S24','₹72,999'],
        ['Motorola G52.jpeg','Motorola G52','₹15,999'],
        ['Redmi Note 12.jpeg','Redmi Note 12','₹12,999'],
        ['Vivo T4x.jpeg','Vivo T4x','₹14,499'],
        ['Poco C75.png','Poco C75','₹9,999']
      ];
      staticProducts.forEach(p => {
    %>
      <div class="col-md-2 product-card">
        <img src="user_cdn/img/<%= p[0] %>">
        <h6><%= p[1] %></h6>
        <p><%= p[2] %></p>
      </div>
    <% }) %>
  </div>
</div>

<!-- ================= DATABASE PRODUCTS ================= -->
<div class="container my-5">
  <h4>Products from Database</h4>
  <div class="row">

    <% if (products && products.length > 0) { %>
      <% products.forEach(p => { %>
        <div class="col-md-2 product-card">
          <img src="user_cdn/img/<%= p.image || 'default.png' %>">
          <h6><%= p.name %></h6>
          <p>₹ <%= p.price %></p>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted">No products available from database.</p>
    <% } %>

  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
