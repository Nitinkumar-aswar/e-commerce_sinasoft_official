<head>
  <meta charset="UTF-8">
  <title>Tractor Decoration Gallery</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .product-card {
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 12px;
      background: #fff;
      transition: transform 0.3s, box-shadow 0.3s;
      height: 100%;
    }

    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .product-card img {
      max-height: 150px;
      object-fit: contain;
      margin-bottom: 10px;
      transition: transform 0.3s;
    }

    .product-card img:hover {
      transform: scale(1.05);
    }

    .product-card h6 {
      font-size: 16px;
      font-weight: 600;
      margin-bottom: 8px;
      color: #2874f0; /* Attractive blue */
    }

    .product-card p {
      font-size: 14px;
      font-weight: 500;
      color: #ff7a18; /* Price highlight */
      margin-bottom: 0;
    }

    .gallery-title {
      font-size: 24px;
      font-weight: 700;
      color: #333;
      margin-bottom: 30px;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    @media (max-width: 576px) {
      .product-card img {
        max-height: 120px;
      }
    }
  </style>
</head>

<div class="container my-5">

  <h4 class="text-center gallery-title">Tractor Decoration Accessories</h4>

  <div class="row justify-content-center g-4">

    <% if (tractorDecorations && tractorDecorations.length > 0) { %>
      <% tractorDecorations.forEach((i) => { %>
        <div class="col-6 col-sm-4 col-md-3 d-flex">
          <div class="product-card text-center w-100">
            <img src="/upload/<%= i.tractor_dec_img %>" 
                 alt="<%= i.tractor_dec_title %>" 
                 class="img-fluid">
            <h6><%= i.tractor_dec_title %></h6>
            <p>â‚¹ <%= i.tractor_dec_price %></p>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center">No Tractor Decorations Available</p>
    <% } %>

  </div>
</div>
