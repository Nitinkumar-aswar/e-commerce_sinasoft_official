<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Flipkart Login</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
body {
  margin: 0;
  background: #f1f3f6;
  font-family: Arial, sans-serif;
}

/* Login Layout */
.login-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 50px;
}

.login-card {
  display: flex;
  width: 800px;
  background: white;
  box-shadow: 0 4px 15px rgba(0,0,0,0.1);
  animation: fadeUp 0.8s ease;
}

@keyframes fadeUp {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Left */
.login-left {
  width: 40%;
  background: #2874f0;
  color: white;
  padding: 40px;
}

.login-left img {
  width: 100%;
  margin-top: 40px;
}

/* Right */
.login-right {
  width: 60%;
  padding: 40px;
}

.login-right input {
  width: 100%;
  border: none;
  border-bottom: 1px solid #2874f0;
  padding: 10px 5px;
  font-size: 16px;
  outline: none;
}

.login-right input:focus {
  border-bottom: 2px solid #2874f0;
}

.terms {
  font-size: 12px;
  color: #666;
  margin-top: 20px;
}

.terms a {
  color: #2874f0;
  text-decoration: none;
}

.btn-otp {
  width: 100%;
  margin-top: 20px;
  padding: 12px;
  background: #fb641b;
  border: none;
  color: white;
  font-size: 16px;
  cursor: pointer;
  transition: transform 0.2s, background 0.2s;
}

.btn-otp:hover {
  background: #e95b17;
  transform: scale(1.03);
}

.signup {
  margin-top: 40px;
  text-align: center;
}

.signup a {
  color: #2874f0;
  font-weight: bold;
  text-decoration: none;
}

/* Responsive */
@media (max-width: 768px) {
  .login-card {
    flex-direction: column;
    width: 95%;
  }

  .login-left,
  .login-right {
    width: 100%;
  }

  .login-left img {
    display: none;
  }
}
</style>
</head>

<body>

<div class="login-wrapper">
  <div class="login-card">

    <!-- Left -->
    <div class="login-left">
      <h2>Login</h2>
      <p>Get access to your Orders,<br>Wishlist and Recommendations</p>
      <img src="user_cdn/img/login_img.png" alt="login">
    </div>

    <!-- Right -->
    <div class="login-right">
      <input type="text" id="userInput" placeholder="Enter Email / Mobile number" required>

      <p class="terms">
        By continuing, you agree to Flipkart's
        <a href="#">Terms of Use</a> and
        <a href="#">Privacy Policy</a>.
      </p>

      <button class="btn-otp" onclick="requestOTP()">Request OTP</button>
<p class="signup">
  New to Flipkart? <a href="register" class="login-link">Create an account</a>
</p>

    </div>

  </div>
</div>

<script>
function requestOTP() {
  const input = document.getElementById("userInput").value.trim();

  if (input === "") {
    alert("Please enter Email or Mobile number");
    return;
  }

  alert("OTP sent successfully ✔️ (Demo)");
}
</script>

</body>
</html>






