<%- include("navbar.ejs") %>

<form action="/admin/save_categories" method="POST" enctype="multipart/form-data" class="w-100">
  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add Vehicle Decoration Accessories</h1>
      </div>
    </div>

    <div class="row">

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Vehicle Decoration Accessories Title</label>
        <input type="text" name="Vehicle_decoration_accessories_title"
               class="form-control" required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Vehicle Decoration Accessories Heading</label>
        <input type="text" name="Vehicle_decoration_accessories_heading"
               class="form-control">
      </div>

      <!-- Description -->
      <div class="col-md-12 mb-3">
        <label>Description</label>
        <textarea name="Vehicle_decoration_accessories_desc"
                  class="form-control" rows="3"></textarea>
      </div>

      <!-- Price -->
      <div class="col-md-6 mb-3">
        <label>Price</label>
        <input type="number" name="Vehicle_decoration_accessories_price"
               class="form-control">
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file" name="Vehicle_decoration_accessories_img"
               accept="image/*" class="form-control">
      </div>

      <!-- Submit -->
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">
          Save Vehicle Decoration Accessories
        </button>
      </div>

    </div>
  </div>
</form>












<div class="container-fluid p-3">
  <div class="row">
    <div class="col-md-12">
      <h3>Vehicle Decoration Accessories List</h3>
    </div>

    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
          <thead>
            <tr>
              <th>Action</th>
              <th>Sr. No.</th>
              <th>Title</th>
              <th>Heading</th>
              <th>Description</th>
              <th>Price</th>
              <th>Image</th>
            </tr>
          </thead>

          <tbody>
            <% var sr = 1; %>
            <% categories.forEach((c) => { %>
              <tr>

                <!-- Action -->
                <td class="text-center">
                  <!-- Edit -->
                  <a href="/admin/edit_categories/<%= c.category_id %>"
                     class="btn btn-sm btn-warning"
                     title="Edit">
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>

                  <!-- Delete -->
                  <a href="/admin/delete_categories/<%= c.category_id %>"
                     class="btn btn-sm btn-danger"
                     title="Delete"
                     onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="fa-solid fa-trash"></i>
                  </a>
                </td>

                <!-- Data -->
                <td><%= sr++ %></td>
                <td><%= c.category_title %></td>
                <td><%= c.category_heading %></td>
                <td><%= c.category_desc %></td>
                <td>â‚¹ <%= c.category_price %></td>

                <!-- Image -->
                <td>
                  <% if(c.category_img){ %>
                    <img src="/upload/<%= c.category_img %>" width="60">
                  <% } else { %>
                    No Image
                  <% } %>
                </td>

              </tr>
            <% }) %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
</div>













