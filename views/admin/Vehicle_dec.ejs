<form action="/admin/save_Vehicle_dec" method="POST" enctype="multipart/form-data" class="w-100">
    <div class="container-fluid bg-white p-3">

        <!-- <a href="/account_list">All Slider</a> -->
        <div class="row">
            <div class="col-12 mb-3">
                <h1>Add Vehicle Dec</h1>
            </div>

            <div class="row">
                <!-- Vehicle Title -->
                <div class="col-md-6 mb-3">
                    <label for="Vehicle_Dec_Title">Vehicle Dec Title</label>
                    <input type="text" name="Vehicle_Dec_Title" id="Vehicle_Dec_Title" class="form-control" required>
                </div>
                
                <!-- vehicle Heading -->
                <div class="col-md-6 mb-3">
                    <label for="Vehicle_Dec_Heading">Vehicle Dec Heading</label>
                    <input type="text" name="Vehicle_Dec_Heading" id="Vehicle_Dec_Heading" class="form-control" required>
                </div>
  

                <!-- Vehicle Dec -->
                <div class="col-md-6 mb-3">
                    <label for="Vehicle_Dec_Desc">Vehicle Dec Desc</label>
                    <input type="text" name="Vehicle_Dec_Desc" id="Vehicle_Dec_Desc" class="form-control" required>
                </div>

                <!-- Slider Image -->
                <div class="col-md-6 mb-3">
                    <label for="Vehicle_Dec_Img">Vehicle_Dec_Img</label>
                    <input type="file" name="Vehicle_Dec_Img" id="Vehicle_Dec_Img" accept="image/*" class="form-control">
                </div>

                <!-- Submit Button -->
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Save Vehicle Dec</button>
                </div>
            </div>

        </div>
    </div>
</form>







<!-- vehicle decoration table -->
<div class="container-fluid p-3">
    <div class="row">
        <div class="col-md-12">
            <h3>Vehicle Decoration List</h3>
        </div>

        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Sr. No.</th>
                            <th>Title</th>
                            <th>Heading</th>
                            <th>Description</th>
                            <th>Image</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% var sr = 1; for (let i of vehicle_dec) { %>
                        <tr>

                            <!-- Action -->
                            <td class="text-center">
                                <!-- Edit -->
                                <a href="/admin/edit_vehicle_dec/<%= i.vehicle_dec_id %>"
                                   class="action-btn edit-btn"
                                   title="Edit Vehicle Decoration">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>

                                <!-- Delete -->
                                <a href="/admin/delete_vehicle_dec/<%= i.vehicle_dec_id %>"
                                   class="action-btn delete-btn"
                                   title="Delete Vehicle Decoration"
                                   onclick="return confirm('Are you sure you want to delete this record?')">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>

                            <!-- Data -->
                            <td><%= sr++ %></td>
                            <td><%= i.vehicle_dec_title %></td>
                            <td><%= i.vehicle_dec_heading %></td>
                            <td><%= i.vehicle_dec_desc %></td>

                            <!-- Image -->
                            <td>
                                <img src="/upload/<%= i.vehicle_dec_img %>" width="60">
                            </td>

                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


