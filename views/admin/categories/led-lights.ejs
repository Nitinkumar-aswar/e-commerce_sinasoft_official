<%- include("../navbar.ejs") %>

<form action="/admin/save_led_lights"
      method="POST"
      enctype="multipart/form-data"
      class="w-100">

  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add LED Lights Decoration</h1>
      </div>

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Title</label>
        <input type="text"
               name="led_title"
               class="form-control"
               placeholder="Enter LED title"
               required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Heading</label>
        <input type="text"
               name="led_heading"
               class="form-control"
               placeholder="Enter short heading"
               required>
      </div>

      <!-- Price (ONLY FOR LED) -->
      <div class="col-md-6 mb-3">
        <label>Price (â‚¹)</label>
        <input type="number"
               name="price"
               class="form-control"
               step="0.01"
               placeholder="Enter price"
               required>
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file"
               name="led_image"
               accept="image/*"
               class="form-control"
               required>
      </div>

      <!-- Hidden Category -->
      <input type="hidden" name="category" value="led-lights">

      <!-- Button -->
      <div class="col-12 text-end">
        <button class="btn btn-primary">
          Save LED Lights
        </button>
      </div>

    </div>
  </div>
</form>




<div class="container-fluid p-3">
    <div class="row">
        <div class="col-12 mb-3">
            <h3>LED Items List</h3>
        </div>

        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table">
                        <tr>
                            <th>Action</th>
                            <th>Sr. No.</th>
                            <th>Title</th>
                            <th>Heading</th>
                            <th>Price</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(led_lights && led_lights.length > 0){ %>
                            <% let sr = 1; for (let led of led_lights) { %>
                                <tr>
                                    <td class="text-center">
                                        <!-- Edit -->
                                        <a href="/admin/edit_led/<%= led.led_id %>"
                                           class="btn btn-sm btn-primary"
                                           title="Edit LED Item">
                                           <i class="fa-solid fa-pen-to-square"></i>
                                        </a>

                                        <!-- Delete -->
                                        <a href="/admin/delete_led/<%= led.led_id %>"
                                           class="btn btn-sm btn-danger"
                                           title="Delete LED Item"
                                           onclick="return confirm('Are you sure you want to delete this LED item?')">
                                           <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>

                                    <td><%- sr++ %></td>
                                    <td><%- led.led_title %></td>
                                    <td><%- led.led_heading %></td>
                                    <td><%- led.price %></td>
                                   <td>
    <% if(led.led_image){ %>
        <img src="/upload/<%- led.led_image %>" width="50px" alt="LED Image">
    <% } %>
</td>
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">No LED Items Found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

