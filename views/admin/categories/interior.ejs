<%- include("../navbar.ejs") %>

<form action="/admin/save_interior"
      method="POST"
      enctype="multipart/form-data"
      class="w-100">

  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add Interior Decoration Accessories</h1>
      </div>

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Title</label>
        <input type="text"
               name="interior_title"
               class="form-control"
               placeholder="Enter title"
               required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Heading</label>
        <input type="text"
               name="interior_heading"
               class="form-control"
               placeholder="Enter short heading"
               required>
      </div>

      <!-- Price -->
      <div class="col-md-6 mb-3">
        <label>Price (₹)</label>
        <input type="number"
               name="price"
               class="form-control"
               placeholder="Enter price"
               required>
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file"
               name="interior_image"
               class="form-control"
               accept="image/*"
               required>
      </div>

      <!-- Hidden Category -->
      <input type="hidden" name="category" value="interior-decoration">

      <!-- Button -->
      <div class="col-12 text-end">
        <button class="btn btn-primary">
          Save Interior Decoration
        </button>
      </div>

    </div>
  </div>
</form>



<div class="container-fluid bg-white p-3">
  <div class="row mb-3">
    <div class="col-6">
      <h3>Interior Decoration Accessories</h3>
    </div>
  </div>

  <table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
      <tr>
        <th width="160">Action</th>
        <th>Sr.No</th>
        <th>Title</th>
        <th>Heading</th>
        <th>Price</th>
         <th>Category</th>
        <th>Image</th>
      </tr>
    </thead>

    <tbody>
      <% if (typeof interior_decoration !== "undefined" && interior_decoration.length > 0) { %>
        <% interior_decoration.forEach((i, index) => { %>
          <tr>

            <!-- ACTION -->
            <td>
              <a href="/admin/edit_interior/<%= i.id %>"
                 class="btn btn-sm btn-primary mb-1">
                <i class="fa-solid fa-pen-to-square"></i>
              </a>

              <a href="/admin/delete_interior/<%= i.id %>"
                 onclick="return confirm('Delete this item?')"
                 class="btn btn-sm btn-danger">
                <i class="fa-solid fa-trash"></i>
              </a>
            </td>

            <td><%= index + 1 %></td>
            <td><%= i.interior_title %></td>
            <td><%= i.interior_heading %></td>
            <td>₹ <%= i.price %></td>
            <td> <%= i.category %></td>

            <td>
              <% if (i.interior_image) { %>
                <img src="/upload/<%= i.interior_image %>" width="60">
              <% } else { %>
                No Image
              <% } %>
            </td>

          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-danger">
            No Interior Decoration Items Found
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../footer.ejs") %>
