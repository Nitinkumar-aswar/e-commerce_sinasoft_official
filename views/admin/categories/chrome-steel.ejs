<%- include("../navbar.ejs") %>

<form action="/admin/save_chrome_steel"
      method="POST"
      enctype="multipart/form-data"
      class="w-100">

  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add Chrome / Steel Accessories</h1>
      </div>

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Title</label>
        <input type="text"
               name="chrome_title"
               class="form-control"
               placeholder="Enter title"
               required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Heading</label>
        <input type="text"
               name="chrome_heading"
               class="form-control"
               placeholder="Enter short heading"
               required>
      </div>

      <!-- Price -->
      <div class="col-md-6 mb-3">
        <label>Price (₹)</label>
        <input type="number"
               name="price"
               class="form-control"
               step="0.01"
               placeholder="Enter price"
               required>
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file"
               name="chrome_image"
               accept="image/*"
               class="form-control"
               required>
      </div>

      <!-- Hidden Category -->
      <input type="hidden" name="category" value="chrome-steel">

      <!-- Button -->
      <div class="col-12 text-end">
        <button class="btn btn-primary">
          Save Chrome / Steel
        </button>
      </div>

    </div>
  </div>
</form>





<div class="container-fluid bg-white p-3">
  <div class="row mb-3">
    <div class="col-6">
      <h3>Chrome Steel Accessories</h3>
    </div>
    <div class="col-6 text-end">
     
    </div>
  </div>

  <table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
      <tr>
        
        <th width="160">Action</th>
        <th>Sr.No</th>
        <th>Title</th>
        <th>Heading</th>
        <th>Price</th>
        <th>Image</th>
      </tr>
    </thead>

    <tbody>
      <% if(chrome_steel.length > 0){ %>
        <% chrome_steel.forEach((i, index) => { %>
          <tr>
           

            <!-- ACTION FIRST -->
            <td>
              <a href="/admin/edit_chrome_steel/<%= i.chrome_id %>"
                 class="btn btn-sm btn-primary mb-1">
                <i class="fa-solid fa-pen-to-square"></i>
              </a>

              <a href="/admin/delete_chrome_steel/<%= i.chrome_id %>"
                 onclick="return confirm('Delete this item?')"
                 class="btn btn-sm btn-danger">
                 <i class="fa-solid fa-trash"></i>
              </a>
            </td>
            <td><%= index + 1 %></td>
            <td><%= i.chrome_title %></td>
            <td><%= i.chrome_heading %></td>
            <td>₹ <%= i.price %></td>

            <!-- IMAGE LAST -->
            <td>
              <% if(i.chrome_image){ %>
                <img src="/upload/<%= i.chrome_image %>" width="60">
              <% } else { %>
                No Image
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-danger">
            No Chrome Steel Items Found
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../footer.ejs") %>
