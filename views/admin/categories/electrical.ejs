<%- include("../navbar.ejs") %>

<form action="/admin/save_electrical"
      method="POST"
      enctype="multipart/form-data"
      class="w-100">

  <div class="container-fluid bg-white p-3">
    <div class="row">

      <div class="col-12 mb-3">
        <h1>Add Electrical Accessories</h1>
      </div>

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Title</label>
        <input type="text"
               name="electrical_title"
               class="form-control"
               placeholder="Enter title"
               required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Heading</label>
        <input type="text"
               name="electrical_heading"
               class="form-control"
               placeholder="Enter short heading"
               required>
      </div>

      <!-- Price -->
      <div class="col-md-6 mb-3">
        <label>Price (₹)</label>
        <input type="number"
               name="price"
               class="form-control"
               required>
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file"
               name="electrical_image"
               class="form-control"
               accept="image/*"
               required>
      </div>

      <div class="col-12 text-end">
        <button class="btn btn-primary">
          Save Electrical Item
        </button>
      </div>

    </div>
  </div>
</form>






<!-- views/admin/categories/electrical.ejs -->


<div class="container-fluid bg-white p-3 mt-4">
  <h3>Electrical Accessories</h3>

  <table class="table table-bordered table-hover align-middle mt-3">
    <thead class="table-white">
      <tr>
        <th>Action</th>
        <th>Sr.No</th>
        <th>Title</th>
        <th>Heading</th>
        <th>Price</th>
        <th>Image</th>
      </tr>
    </thead>

    <tbody>
      <% if (electrical.length > 0) { %>
        <% electrical.forEach((i, index) => { %>
          <tr>
            <!-- Action Buttons -->
            <td>
              <a href="/admin/edit_electrical/<%= i.id %>"
                 class="btn btn-sm btn-primary mb-1">
                <i class="fa-solid fa-pen-to-square"></i>
              </a>

              <a href="/admin/delete_electrical/<%= i.id %>"
                 onclick="return confirm('Delete this item?')"
                 class="btn btn-sm btn-danger mb-1">
                <i class="fa-solid fa-trash"></i>
              </a>
            </td>

            <td><%= index + 1 %></td>
            <td><%= i.electrical_title %></td>
            <td><%= i.electrical_heading %></td>
            <td>₹ <%= i.price %></td>

            <td>
              <% if (i.electrical_image) { %>
                <img src="/upload/<%= i.electrical_image %>" width="60">
              <% } else { %>
                <span class="text-danger">No Image</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center text-danger">
            No Electrical Items Found
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("../footer.ejs") %>
