<%- include("../navbar.ejs") %>


<form action="/admin/save_vehicle_decoration" 
      method="POST" 
      enctype="multipart/form-data"
      class="w-100">

  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add Vehicle Decoration</h1>
      </div>

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Title</label>
        <input type="text" 
               name="vehicle_title" 
               class="form-control" required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Heading</label>
        <input type="text" 
               name="vehicle_heading" 
               class="form-control" required>
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file" 
               name="file_vehicle" 
               accept="image/*"
               class="form-control">
      </div>

      <!-- Button -->
      <div class="col-12 text-end">
        <button class="btn btn-primary">
          Save Vehicle Decoration
        </button>
      </div>

    </div>
  </div>
</form>




<div class="container-fluid p-3">
    <div class="row">
        <div class="col-12 mb-3">
            <h3>Vehicle Decoration List</h3>
        </div>

        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table">
                        <tr>
                            <th>Action</th>
                            <th>Sr. No.</th>
                            <th>Title</th>
                            <th>Heading</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(vehicle_decoration.length > 0){ %>
                            <% var sr = 1; for (let v of vehicle_decoration) { %>
                                <tr>
                                    <td class="text-center">
                                       <!-- Edit -->
<a href="/admin/edit_vehicle_decoration/<%= v.vehicle_id %>"
   class="btn btn-sm btn-primary"
   title="Edit Vehicle Decoration">
   <i class="fa-solid fa-pen-to-square"></i>
</a>

<!-- Delete -->
<a href="/admin/delete_vehicle_decoration/<%= v.vehicle_id %>"
   class="btn btn-sm btn-danger"
   title="Delete Vehicle Decoration"
   onclick="return confirm('Are you sure you want to delete this vehicle decoration?')">
   <i class="fa-solid fa-trash"></i>
</a>

                                    </td>

                                    <td><%- sr++ %></td>
                                    <td><%- v.vehicle_title %></td>
                                    <td><%- v.vehicle_heading %></td>
                                    <td>
                                        <% if(v.file_vehicle){ %>
                                            <img src="/upload/<%- v.file_vehicle %>" width="50px" alt="Vehicle Image">
                                        <% } %>
                                    </td>
                                </tr>
                            <% } %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="text-center">No Vehicle Decorations Found</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





<%- include("../footer.ejs") %>