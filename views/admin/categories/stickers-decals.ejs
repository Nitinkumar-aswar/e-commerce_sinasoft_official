<%- include("../navbar.ejs") %>

<form action="/admin/save_stickers_decals"
      method="POST"
      enctype="multipart/form-data"
      class="w-100">

  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add Stickers & Decals</h1>
      </div>

      <!-- Title -->
      <div class="col-md-6 mb-3">
        <label>Title</label>
        <input type="text"
               name="stickers_title"
               class="form-control"
               placeholder="Enter sticker/decal title"
               required>
      </div>

      <!-- Heading -->
      <div class="col-md-6 mb-3">
        <label>Heading</label>
        <input type="text"
               name="stickers_heading"
               class="form-control"
               placeholder="Enter short heading"
               required>
      </div>

      <!-- Price (Optional for Stickers) -->
      <div class="col-md-6 mb-3">
        <label>Price (₹)</label>
        <input type="number"
               name="price"
               class="form-control"
               step="0.01"
               placeholder="Enter price (if applicable)">
      </div>

      <!-- Image -->
      <div class="col-md-6 mb-3">
        <label>Image</label>
        <input type="file"
               name="stickers_image"
               accept="image/*"
               class="form-control"
               required>
      </div>

      <!-- Hidden Category -->
      <input type="hidden" name="category" value="stickers-decals">

      <!-- Button -->
      <div class="col-12 text-end">
        <button class="btn btn-primary">
          Save Stickers & Decals
        </button>
      </div>

    </div>
  </div>
</form>






<div class="container-fluid  p-3">
  <div class="row mb-3">
    <div class="col-6">
      <h3>Stickers & Decals</h3>
    </div>
    <div class="col-6 text-end">
      <!-- <a href="/admin/add_stickers_decals" class="btn btn-success">Add New Sticker/Decal</a> -->
    </div>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Actions</th>
        <th>ID</th>
        <th>Title</th>
        <th>Heading</th>
        <th>Price (₹)</th>
        <th>Category</th>
        <th>Created At</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% if (stickers_decals.length > 0) { %>
        <% stickers_decals.forEach(item => { %>
          <tr>
            <!-- Actions first -->
            <td>
              <a href="/admin/edit_stickers_decals/<%= item.id %>" class="btn btn-sm btn-primary mb-1"> <i class="fa-solid fa-pen-to-square"></i></a>
              <a href="/admin/delete_stickers_decals/<%= item.id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')"><i class="fa-solid fa-trash"></i></a>
            </td>
            
            <td><%= item.id %></td>
            <td><%= item.title %></td>
            <td><%= item.heading %></td>
            <td><%= item.price %></td>
            <td><%= item.category %></td>
            <td><%= new Date(item.created_at).toLocaleString() %></td>
            
            <!-- Image last -->
            <td>
              <% if (item.image) { %>
                <img src="/upload/<%= item.image %>" alt="Image" style="width: 80px; height: auto;">
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8" class="text-center">No stickers or decals found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>





