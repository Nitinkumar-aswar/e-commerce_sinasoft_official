<%- include("navbar.ejs") %>

<form action="/admin/save_contact_us" method="POST" class="w-100">
  <div class="container-fluid bg-white p-3">

    <div class="row">
      <div class="col-12 mb-3">
        <h1>Add Contact Us Information</h1>
      </div>
    </div>

    <div class="row">

      <!-- Address -->
      <div class="col-md-12 mb-3">
        <label>Address</label>
        <textarea name="contact_address"
                  class="form-control"
                  rows="3"
                  placeholder="Enter full address"></textarea>
      </div>

      <!-- Phone -->
      <div class="col-md-6 mb-3">
        <label>Phone Number</label>
        <input type="text"
               name="contact_phone"
               class="form-control"
               placeholder="+91 XXXXX XXXXX">
      </div>

      <!-- Email -->
      <div class="col-md-6 mb-3">
        <label>Email Address</label>
        <input type="email"
               name="contact_email"
               class="form-control"
               placeholder="support@example.com">
      </div>

      <!-- Working Hours -->
      <div class="col-md-12 mb-3">
        <label>Working Hours</label>
        <input type="text"
               name="contact_working_hours"
               class="form-control"
               placeholder="Mon – Sat | 9:00 AM – 7:00 PM">
      </div>

      <!-- Submit -->
      <div class="col-12 text-end">
        <button type="submit" class="btn btn-primary">
          Save Contact Information
        </button>
      </div>

    </div>
  </div>
</form>

















<div class="container-fluid p-3">
  <div class="row">

    <div class="col-md-12">
      <h3>Contact Us List</h3>
    </div>

    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">

          <thead>
            <tr>
              <th>Action</th>
              <th>Sr. No.</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Working Hours</th>
            </tr>
          </thead>

          <tbody>
            <% var sr = 1; %>
            <% contact_us.forEach((c) => { %>
              <tr>

                <!-- Action -->
                <td class="text-center">

                  <!-- Edit -->
                  <a href="/admin/edit_contact_us/<%= c.contact_id %>"
                     class="btn btn-sm btn-warning"
                     title="Edit">
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>

                  <!-- Delete -->
                  <a href="/admin/delete_contact_us/<%= c.contact_id %>"
                     class="btn btn-sm btn-danger"
                     title="Delete"
                     onclick="return confirm('Are you sure you want to delete this record?')">
                    <i class="fa-solid fa-trash"></i>
                  </a>

                </td>

                <!-- Data -->
                <td><%= sr++ %></td>
                <td><%= c.address %></td>
                <td><%= c.phone %></td>
                <td><%= c.email %></td>
                <td><%= c.working_hours %></td>

              </tr>
            <% }) %>
          </tbody>

        </table>
      </div>
    </div>

  </div>
</div>













