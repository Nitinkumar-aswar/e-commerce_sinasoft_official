<%- include("navbar.ejs") %>

<form action="/admin/save_slider" method="POST" enctype="multipart/form-data" class="w-100">
    <div class="container-fluid bg-white p-3">

        <!-- <a href="/account_list">All Slider</a> -->
        <div class="row">
            <div class="col-12 mb-3">
                <h1>Add Slider</h1>
            </div>

            <div class="row">
                <!-- Slider Title -->
                <div class="col-md-6 mb-3">
                    <label for="Slider_title">Slider Title</label>
                    <input type="text" name="Slider_title" id="Slider_title" class="form-control" required>
                </div>

                <!-- Slider Heading -->
                <div class="col-md-6 mb-3">
                    <label for="Slider_heading">Slider Heading</label>
                    <input type="text" name="Slider_heading" id="Slider_heading" class="form-control" required>
                </div>

                <!-- Slider Image -->
                <div class="col-md-6 mb-3">
                    <label for="Slider_img">Slider Image</label>
                    <input type="file" name="Slider_img" id="Slider_img" accept="image/*" class="form-control">
                </div>

                <!-- Submit Button -->
                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary">Save Slider</button>
                </div>
            </div>

        </div>
    </div>
</form>

<!-- table madhe data print  -->
<div class="container-fluid p-3">
    <div class="row">
        <div class="col-md-12">
            <h3>Slider List</h3>
        </div>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Action</th>
                            <th>Sr. No.</th>
                            <th>Title</th>
                            <th>Heading</th>
                            <th>Image</th>
                         
                        </tr>
                    </thead>
                    <tbody>
                        <% var sr = 1; for (i of sliders) { %>
                        <tr>
                          <td class="text-center">
    <!-- Edit -->
    <a href="/admin/edit_slider/<%= i.slider_id %>" 
       class="action-btn edit-btn"
       title="Edit Slider">
        <i class="fa-solid fa-pen-to-square"></i>
    </a>

    <!-- Delete -->
    <a href="/admin/delete_slider/<%= i.slider_id %>" 
       class="action-btn delete-btn"
       title="Delete Slider"
       onclick="return confirm('Are you sure you want to delete this slider?')">
        <i class="fa-solid fa-trash"></i>
    </a>
</td>

                            <td><%-sr++%></td>
                            <td><%-i.Slider_title%></td>
                            <td><%-i.Slider_heading%></td>
                           
                            <td><img src="/upload/<%-i.Slider_img%>" width="50px"></td>
                          
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
















