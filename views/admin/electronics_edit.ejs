<%- include("navbar.ejs") %>

<form action="/admin/edit_electronics" method="POST" enctype="multipart/form-data">

    <!-- hidden id -->
    <input type="hidden" name="id" value="<%= electronics_info.id %>">

    <div class="container-fluid bg-white p-3">
        <div class="row">

            <div class="col-12">
                <h3>Edit Electronics</h3>
            </div>

            <!-- Title -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Electronics Title</label>
                <input type="text"
                       name="electronics_title"
                       value="<%= electronics_info.title %>"
                       class="form-control" required>
            </div>

            <!-- Brand / Heading -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Brand / Heading</label>
                <input type="text"
                       name="electronics_brand"
                       value="<%= electronics_info.brand %>"
                       class="form-control">
            </div>

            <!-- Description -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Description</label>
                <textarea name="electronics_desc"
                          class="form-control"
                          rows="3"><%= electronics_info.description %></textarea>
            </div>

            <!-- Price -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Price</label>
                <input type="number"
                       name="electronics_price"
                       value="<%= electronics_info.price %>"
                       class="form-control">
            </div>

            <!-- Image Upload -->
            <div class="col-md-4 mb-3">
                <label class="form-label">Electronics Image</label>
                <input type="file"
                       name="electronics_img"
                       class="form-control">
            </div>

            <!-- Old Image Preview -->
            <div class="col-md-2 mb-3">
                <% if (electronics_info.img) { %>
                    <img src="/upload/<%= electronics_info.img %>" width="100%" alt="Old Image">
                <% } else { %>
                    <p>No Image</p>
                <% } %>
            </div>

            <!-- Submit -->
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">
                    Update Electronics
                </button>
            </div>

        </div>
    </div>
</form>

<%- include("footer.ejs") %>
