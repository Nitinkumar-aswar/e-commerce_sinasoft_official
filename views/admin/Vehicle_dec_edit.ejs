<%- include("navbar.ejs") %>

<form action="/admin/edit_vehicle_dec" method="post" enctype="multipart/form-data">

    <!-- hidden id -->
    <input type="hidden" name="vehicle_dec_id" value="<%= vehicle_info.vehicle_dec_id %>">

    <div class="container-fluid bg-white p-3">
        <div class="row">

            <div class="col-12">
                <h3>Edit Vehicle Decoration</h3>
            </div>

            <!-- Title -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Vehicle Dec Title</label>
                <input type="text"
                       name="Vehicle_Dec_Title"
                       value="<%= vehicle_info.vehicle_dec_title %>"
                       class="form-control">
            </div>

            <!-- Heading -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Vehicle Dec Heading</label>
                <input type="text"
                       name="Vehicle_Dec_Heading"
                       value="<%= vehicle_info.vehicle_dec_heading %>"
                       class="form-control">
            </div>

            <!-- Description -->
            <div class="col-md-6 mb-3">
                <label class="form-label">Vehicle Dec Description</label>
               <textarea name="Vehicle_Dec_Desc"
          class="form-control"
          rows="3"><%= vehicle_info.vehicle_dec_desc %></textarea>
            </div>

            <!-- Image Upload -->
            <div class="col-md-4 mb-3">
                <label class="form-label">Vehicle Dec Image</label>
                <input type="file"
                       name="Vehicle_Dec_Img"
                       class="form-control">
            </div>

            <!-- Old Image Preview -->
            <div class="col-md-2 mb-3">
                <img src="/upload/<%= vehicle_info.vehicle_dec_img %>" width="100%">
            </div>

            <!-- Submit -->
            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary">
                    Update Vehicle Decoration
                </button>
            </div>

        </div>
    </div>
</form>

<%- include("footer.ejs") %>
