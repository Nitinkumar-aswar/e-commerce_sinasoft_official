<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart | AutoKart</title>

  <style>
    body {
      margin: 0;
      background: #f1f3f6;
      font-family: Arial, sans-serif;
    }

    .cart-container {
      max-width: 1300px;
      margin: 20px auto;
      display: flex;
      gap: 20px;
      padding: 0 20px;
      align-items: flex-start;
    }

    /* LEFT */
    .cart-left {
      flex: 3;
      background: #fff;
      padding: 20px;
      border-radius: 6px;
    }

    .cart-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .cart-title {
      font-size: 22px;
      font-weight: 600;
    }

    .top-checkout-btn {
      padding: 10px 18px;
      background: #fb641b;
      color: #fff;
      border: none;
      font-size: 14px;
      font-weight: 600;
      cursor: pointer;
      border-radius: 2px;
    }

    .cart-item {
      display: flex;
      gap: 20px;
      padding: 20px 0;
      border-bottom: 1px solid #e0e0e0;
    }

    .cart-item img {
      width: 120px;
      height: 120px;
      object-fit: contain;
      border: 1px solid #ddd;
      border-radius: 4px;
      background: #fff;
    }

    .cart-item-details {
      flex: 1;
    }

    .cart-item-name {
      font-size: 16px;
      font-weight: 500;
      margin-bottom: 6px;
    }

    .cart-stock {
      font-size: 13px;
      color: #388e3c;
      margin-bottom: 12px;
    }

    .qty-controls {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .qty-btn {
      width: 32px;
      height: 32px;
      border: 1px solid #ccc;
      background: #fff;
      cursor: pointer;
      font-size: 18px;
    }

    .qty-input {
      width: 45px;
      height: 32px;
      text-align: center;
      border: 1px solid #ccc;
    }

    .remove-btn {
      margin-left: 15px;
      background: none;
      border: none;
      color: #2874f0;
      cursor: pointer;
      font-size: 14px;
    }

    .cart-item-price {
      font-size: 18px;
      font-weight: bold;
      white-space: nowrap;
    }

    /* RIGHT */
    .cart-right {
      flex: 1.3;
      background: #fff;
      padding: 20px;
      border-radius: 6px;
      height: fit-content;
    }

    .price-title {
      font-size: 18px;
      font-weight: 600;
      border-bottom: 1px solid #e0e0e0;
      padding-bottom: 10px;
      margin-bottom: 15px;
    }

    .price-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      font-size: 14px;
    }

    .price-total {
      font-size: 18px;
      font-weight: bold;
      margin-top: 15px;
      border-top: 1px dashed #ccc;
      padding-top: 15px;
      display: flex;
      justify-content: space-between;
    }

    .checkout-btn {
      width: 100%;
      margin-top: 20px;
      padding: 14px;
      background: #fb641b;
      color: #fff;
      border: none;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      border-radius: 2px;
    }

    .empty-cart {
      text-align: center;
      padding: 40px;
      font-size: 16px;
    }



    /* ================= RESPONSIVE ================= */

/* MOBILE â‰¤480px */
@media (max-width: 480px) {
  .cart-container {
    flex-direction: column;
    padding: 10px;
    gap: 15px;
    align-items: center;
  }

  .cart-left, .cart-right {
    width: 100%;
    padding: 15px;
  }

  .cart-item {
    flex-direction: column;
    align-items: center;
  }

  .cart-item img {
    width: 100px;
    height: 100px;
  }

  .cart-item-details {
    text-align: center;
  }

  .qty-controls {
    justify-content: center;
  }

  .checkout-btn {
    font-size: 14px;
    padding: 12px;
  }
}

/* TABLET 481px â€“ 768px */
@media (min-width: 481px) and (max-width: 768px) {
  .cart-container {
    flex-direction: column;
    padding: 15px;
    align-items: center;
  }

  .cart-left, .cart-right {
    width: 100%;
    padding: 20px;
  }

  .cart-item {
    flex-direction: row;
  }

  .cart-item-details {
    text-align: left;
  }
}

/* LAPTOP 769px â€“ 1024px */
@media (min-width: 769px) and (max-width: 1024px) {
  .cart-container {
    flex-direction: row;
    align-items: flex-start;
  }

  .cart-left { flex: 2.5; }
  .cart-right { flex: 1; }
}

/* DESKTOP â‰¥1025px */
@media (min-width: 1025px) {
  .cart-container {
    flex-direction: row;
    align-items: flex-start;
  }

  .cart-left { flex: 3; }
  .cart-right { flex: 1.3; }
}

  </style>
</head>

<body>

<%- include('partials/header') %>

<%
  let totalItems = 0;
  let totalPrice = 0;

  if (cart && cart.length) {
    cart.forEach(item => {
      totalItems += item.quantity;
      totalPrice += item.price * item.quantity;
    });
  }
%>

<div class="cart-container">

  <!-- LEFT -->
  <div class="cart-left">

    <div class="cart-header">
      <div class="cart-title">My Cart (<%= totalItems %> items)</div>

      
    </div>

    <% if (!cart || cart.length === 0) { %>

      <div class="empty-cart">ðŸ›’ Your cart is empty</div>

    <% } else { %>

      <% cart.forEach(item => { %>

        <div class="cart-item">

          <img src="/uploads/<%= item.image %>" alt="<%= item.product_name %>">

          <div class="cart-item-details">

            <div class="cart-item-name"><%= item.product_name %></div>
            <div class="cart-stock">In stock</div>

            <div class="qty-controls">

  <form method="POST" action="/cart/update" style="display:flex; gap:8px; align-items:center;">
    <input type="hidden" name="product_id" value="<%= item.product_id %>">

    <button type="submit" name="action" value="decrease" class="qty-btn">âˆ’</button>

    <input type="text" class="qty-input" value="<%= item.quantity %>" readonly>

    <button type="submit" name="action" value="increase" class="qty-btn">+</button>
  </form>

  <form method="POST" action="/cart/remove">
    <input type="hidden" name="product_id" value="<%= item.product_id %>">
    <button class="remove-btn">Delete</button>
  </form>

</div>


          </div>

          <div class="cart-item-price">
            â‚¹ <%= item.price * item.quantity %>
          </div>

        </div>

      <% }) %>

    <% } %>

  </div>

  <!-- RIGHT -->
  <div class="cart-right">

    <div class="price-title">PRICE DETAILS</div>

    <div class="price-row">
      <span>Price (<%= totalItems %> items)</span>
      <span>â‚¹ <%= totalPrice %></span>
    </div>

    <div class="price-row">
      <span>Delivery Charges</span>
      <span style="color:green;">FREE</span>
    </div>

    <div class="price-total">
      <span>Total Amount</span>
      <span>â‚¹ <%= totalPrice %></span>
    </div>

   <form action="/checkout" method="GET">
  <input type="hidden" name="type" value="cart">
  <button type="submit" class="checkout-btn">PLACE ORDER</button>
</form>



  </div>

</div>

</body>
</html>
