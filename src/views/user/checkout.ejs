<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout | AutoKart</title>


  <style>
    body {
      margin: 0;
      background: #eaeded;
      font-family: Arial, sans-serif;
    }

    .page-wrapper {
      max-width: 1400px;
      margin: auto;
      padding: 20px;
      display: flex;
      gap: 20px;
    }

    .checkout-left {
      flex: 3;
      background: #fff;
      padding: 20px;
    }

    .section {
      border-bottom: 1px solid #ddd;
      padding-bottom: 20px;
      margin-bottom: 20px;
    }

    .section h2 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .address-box {
      font-size: 14px;
      line-height: 1.6;
    }

    .address-actions a {
      font-size: 13px;
      color: #007185;
      margin-right: 15px;
      text-decoration: none;
    }

    .payment-method {
      padding: 14px;
      border-top: 1px solid #eee;
      font-size: 14px;
      cursor: pointer;
    }

    .payment-method.active {
      background: #fff8f0;
      border-left: 3px solid #ff9900;
    }

    .payment-content {
      margin-top: 10px;
      font-size: 13px;
    }

    select, input[type="text"] {
      padding: 6px;
      width: 260px;
      margin-top: 8px;
    }

    .verify-btn {
      margin-left: 8px;
      padding: 6px 12px;
      border: 1px solid #fcd200;
      background: #ffd814;
      cursor: pointer;
    }

    .muted {
      color: #555;
      font-size: 12px;
      margin-top: 6px;
    }

    .checkout-right {
      flex: 1.2;
      background: #fff;
      padding: 20px;
      border: 1px solid #ddd;
      height: fit-content;
    }

    .place-btn {
      width: 100%;
      background: #ffd814;
      border: 1px solid #fcd200;
      padding: 10px;
      font-size: 14px;
      cursor: pointer;
      margin-bottom: 15px;
    }

    .summary-row {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      margin-bottom: 8px;
    }

    .summary-total {
      font-weight: bold;
      border-top: 1px solid #ddd;
      padding-top: 10px;
    }

    .mini-product {
      display: flex;
      gap: 12px;
      margin-top: 15px;
    }

    .mini-product img {
      width: 80px;
      height: 80px;
      object-fit: contain;
      border: 1px solid #e0e0e0;
      background: #fff;
    }

    .mini-product-name {
      font-size: 13px;
      line-height: 1.4;
      max-width: 240px;
    }
    .upi-box {
  display: none;
}
.mini-cart-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.mini-cart-item {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.mini-cart-item img {
  width: 70px;
  height: 70px;
  object-fit: contain;
  border: 1px solid #e0e0e0;
  background: #fff;
}

.mini-cart-info {
  font-size: 13px;
  line-height: 1.4;
}

/* MOBILE ≤480px */
@media (max-width: 480px) {
  .page-wrapper {
    flex-direction: column;
    padding: 10px;
    gap: 15px;
    align-items: center;
  }

  .checkout-left, .checkout-right {
    width: 100%;
    padding: 15px;
  }

  select, input[type="text"] {
    width: 100%;
  }

  .payment-method {
    font-size: 14px;
  }

  .place-btn {
    font-size: 13px;
  }

  .mini-cart-item {
    flex-direction: row;
    align-items: center;
  }
}

/* TABLET 481px – 768px */
@media (min-width: 481px) and (max-width: 768px) {
  .page-wrapper {
    flex-direction: column;
    padding: 15px;
    align-items: center;
  }

  .checkout-left, .checkout-right {
    width: 100%;
    padding: 20px;
  }

  select, input[type="text"] {
    width: 100%;
  }

  .place-btn { font-size: 14px; }
}

/* LAPTOP 769px – 1024px */
@media (min-width: 769px) and (max-width: 1024px) {
  .page-wrapper {
    flex-direction: row;
    align-items: flex-start;
  }

  .checkout-left { flex: 2.5; }
  .checkout-right { flex: 1; }
}

/* DESKTOP ≥1025px */
@media (min-width: 1025px) {
  .page-wrapper {
    flex-direction: row;
    align-items: flex-start;
  }

  .checkout-left { flex: 3; }
  .checkout-right { flex: 1.2; }
}


  </style>
</head>

<body>

<%- include("partials/header") %>

<div class="page-wrapper">

  <!-- LEFT -->
  <div class="checkout-left">

    <div class="section">
      <h2>1. Delivery address</h2>
      <div class="address-box">
        <strong><%= address.name %></strong><br>
        <%= address.address %><br>
        <%= address.city %>, <%= address.state %> <%= address.pincode %>
      </div>
      <div class="address-actions">
        <a href="#">Change</a>
        <a href="#">Add delivery instructions</a>
      </div>
    </div>

    <div class="section">
      <h2>2. Select a payment method</h2>

      <div class="payment-method active" id="card" onclick="selectPayment('card')">
        <input type="radio" name="pay" checked>
        Credit or Debit Card
      </div>

      <div class="payment-method" id="netbanking" onclick="selectPayment('netbanking')">
        <input type="radio" name="pay">
        Net Banking
        <div class="payment-content">
          <select>
            <option>Choose an Option</option>
            <option>Airtel Payments Bank</option>
            <option>Axis Bank</option>
            <option>HDFC Bank</option>
            <option>ICICI Bank</option>
            <option>Kotak Bank</option>
            <option>State Bank of India</option>
            <option>Bank of India</option>
            <option>Bank of Maharashtra</option>
            <option>Canara Bank</option>
            <option>Central Bank of India</option>
            <option>PNB</option>
            <option>Union Bank</option>
            <option>IDFC First Bank</option>
            <option>Yes Bank</option>
          </select>
        </div>
      </div>

      <div class="payment-method" id="scanupi" onclick="selectPayment('scanupi')">
        <input type="radio" name="pay">
        Scan and Pay with UPI
        <div class="payment-content muted">
          You will need to scan the QR code on the payment page to complete the payment.
        </div>
      </div>

      <div class="payment-method" id="otherupi" onclick="selectPayment('otherupi')">
  <input type="radio" name="pay">
  Other UPI Apps
  <div class="payment-content upi-box">
    <div>Please enter your UPI ID</div>
    <input type="text" placeholder="Enter UPI ID">
    <button class="verify-btn" type="button">Verify</button>
    <div class="muted">
      The UPI ID is in the format of name/phone@bankname
    </div>
  </div>
</div>

      <div class="payment-method">
        <input type="radio" disabled>
        EMI Unavailable <span style="color:#007185;">Why?</span>
      </div>

      <div class="payment-method" id="cod" onclick="selectPayment('cod')">
        <input type="radio" name="pay">
        Cash on Delivery / Pay on Delivery
        <div class="payment-content muted">
          Cash, UPI and Cards accepted.
        </div>
      </div>

    </div>
  </div>

  <!-- RIGHT -->
  <form action="/pay" method="POST" class="checkout-right">

    <% if (mode === "buy-now") { %>
  <input type="hidden" name="productId" value="<%= product.id %>">
<% } %>

    <input type="hidden" name="paymentMethod" id="paymentMethod" value="card">

    <button type="submit" class="place-btn">
      Use this payment method
    </button>

    <div class="summary-row">
  <span>Items:</span>

  <% if (mode === "buy-now") { %>
    <span>₹<%= product.price %></span>
  <% } %>

  <% if (mode === "cart") { 
       let total = 0;
       cart.forEach(i => total += i.price * i.quantity);
  %>
    <span>₹<%= total %></span>
  <% } %>
</div>


    <div class="summary-row">
      <span>Delivery:</span>
      <span style="color:green">FREE</span>
    </div>

   <div class="summary-row summary-total">
  <span>Order Total:</span>

  <% if (mode === "buy-now") { %>
    <span>₹<%= product.price %></span>
  <% } %>

  <% if (mode === "cart") { 
       let total = 0;
       cart.forEach(i => total += i.price * i.quantity);
  %>
    <span>₹<%= total %></span>
  <% } %>
</div>

<div class="mini-cart-list">

  <% if (mode === "buy-now") { %>
    <div class="mini-cart-item">
      <img
        src="/uploads/<%= product.image %>"
        alt="<%= product.product_name %>"
      >
      <div class="mini-cart-info">
        <%= product.product_name %><br>
        <small>Qty: 1</small>
      </div>
    </div>
  <% } %>

  <% if (mode === "cart") { %>
    <% cart.forEach(item => { %>
      <div class="mini-cart-item">
        <img
          src="/uploads/<%= item.image %>"
          alt="<%= item.product_name %>"
        >
        <div class="mini-cart-info">
          <%= item.product_name %><br>
          <small>Qty: <%= item.quantity %></small>
        </div>
      </div>
    <% }) %>
  <% } %>

</div>


    </div>

  </form>

</div>

<script>
function selectPayment(method) {
  // set hidden input
  document.getElementById("paymentMethod").value = method;

  // reset all payment methods
  document.querySelectorAll(".payment-method").forEach(el => {
    el.classList.remove("active");
    const r = el.querySelector("input[type=radio]");
    if (r) r.checked = false;
  });

  // hide UPI verify box by default
  document.querySelectorAll(".upi-box").forEach(box => {
    box.style.display = "none";
  });

  // activate selected method
  const active = document.getElementById(method);
  if (active) {
    active.classList.add("active");
    const r = active.querySelector("input[type=radio]");
    if (r) r.checked = true;
  }

  // show UPI verify box ONLY for otherupi
  if (method === "otherupi") {
    const upiBox = document.querySelector("#otherupi .upi-box");
    if (upiBox) {
      upiBox.style.display = "block";
    }
  }
}
</script>


</body>
</html>
