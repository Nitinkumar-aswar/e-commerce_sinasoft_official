<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shop | AutoKart</title>

  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #ffffff;
    }

    h1 {
      padding: 20px 30px;
      font-size: 22px;
      font-weight: 600;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
      padding: 20px 30px;
    }

    .product-card {
      border: 1px solid #e0e0e0;
      border-radius: 4px;
      padding: 10px;
      transition: box-shadow 0.2s ease;
      background: #fff;
    }

    .product-card:hover {
      box-shadow: 0 2px 8px rgba(0,0,0,0.12);
    }

    .product-card img {
      width: 100%;
      height: 220px;
      object-fit: cover;
      margin-bottom: 10px;
    }

    .product-name {
      font-size: 14px;
      font-weight: 500;
      color: #212121;
      margin-bottom: 6px;
      line-height: 1.3;
    }

    .product-price {
      font-size: 16px;
      font-weight: 600;
      color: #388e3c;
    }

    a.product-link {
      text-decoration: none;
      color: inherit;
    }
  </style>
</head>

<body>

  <h1>Shop</h1>

  <div class="product-grid">

    <% products.forEach(product => { %>

      <a
        class="product-link"
        href="/product/<%= product.id %>-<%= product.product_name.toLowerCase().replace(/\s+/g, '-') %>"
      >
        <div class="product-card">

          <img
            src="/uploads/<%= product.image %>"
            alt="<%= product.product_name %>"
          >

          <div class="product-name">
            <%= product.product_name %>
          </div>

          <div class="product-price">
            â‚¹ <%= product.price %>
          </div>

        </div>
      </a>

    <% }) %>

  </div>

</body>
</html>
