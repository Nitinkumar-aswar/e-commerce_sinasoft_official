<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>AutoKart Admin Panel</title>

  <!-- ===== BASIC STYLES ===== -->
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background: #f4f6f8;
    }

    .admin-header {
      background: #1f2a30;
      color: white;
      padding: 15px 30px;
      font-size: 20px;
    }

    .admin-container {
      display: flex;
    }

    .sidebar {
      width: 220px;
      background: #263238;
      min-height: 100vh;
      color: white;
      padding-top: 20px;
    }

    .sidebar a {
      display: block;
      padding: 12px 20px;
      color: #ddd;
      text-decoration: none;
      font-size: 14px;
    }

    .sidebar a:hover {
      background: #37474f;
      color: #fff;
    }

    .content {
      flex: 1;
      padding: 30px;
    }

    .card {
      background: white;
      padding: 20px;
      border-radius: 6px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }
  </style>

   <!-- =========================
     CROPPER JS (REQUIRED)
========================= -->
<link
  rel="stylesheet"
  href="https://unpkg.com/cropperjs@1.6.1/dist/cropper.min.css"
/>

<script
  src="https://unpkg.com/cropperjs@1.6.1/dist/cropper.min.js">
</script>

</head>

<body>

  <!-- ===== HEADER ===== -->
  <div class="admin-header">
    AutoKart Admin Panel
  </div>

  <!-- ===== MAIN CONTAINER ===== -->
  <div class="admin-container">

    <!-- ===== SIDEBAR ===== -->
    <div class="sidebar">
      <a href="/admin">Dashboard</a>
      <a href="/admin/sliders">Sliders</a>
      <a href="/admin/products">Products</a>
      <a href="#">Categories</a>
      <a href="#">Orders</a>
      <a href="#">Users</a>
      <a href="/">Go to Website</a>
    </div>

    <!-- ===== CONTENT AREA ===== -->
    <div class="content">

      <!-- ===== CARD (WHITE AREA) ===== -->
      <div class="card">

        <!-- DASHBOARD VIEW -->
        <div class="card">

         <% if (page === "dashboard") { %>
         <h2>Welcome to Admin Dashboard</h2>
              <p>Select an option from the sidebar.</p>
       <% } %>

        <% if (page === "sliders") { %>
       <%- include("sliders") %>
             <% } %>

        <% if (page === "products") { %>
     <%- include("products") %>
               <% } %>

</div>

      <!-- ===== END CARD ===== -->

    </div>
    <!-- ===== END CONTENT ===== -->

  </div>
  <!-- ===== END CONTAINER ===== -->

</body>
</html>
